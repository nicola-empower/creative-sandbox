---
interface Props {
  description: string;
  fontHeader: string;
  fontBody: string;
  palette: {
    hex: string;
    name: string;
  }[];
}

const { description, fontHeader, fontBody, palette } = Astro.props;
const cleanFontHeader = fontHeader.replace(/['"]/g, "");
const cleanFontBody = fontBody.replace(/['"]/g, "");
---

<section class="vibe-dna-section">
  <div class="dna-container">
    <!-- Description Column -->
    <div class="dna-info">
      <h2 class="dna-title">Vibe DNA</h2>
      <p class="dna-desc">{description}</p>
    </div>

    <!-- Cards Column -->
    <div class="dna-cards">
      <!-- Typography Card -->
      <div class="dna-card">
        <div class="card-label">
          <span class="icon">T</span> TYPOGRAPHY
        </div>
        <div class="font-sample">
          <span class="font-name" style={`font-family: ${fontHeader};`}
            >{cleanFontHeader}</span
          >
          <span class="font-role">Primary Header</span>
        </div>
        <div class="font-sample">
          <span class="font-name" style={`font-family: ${fontBody};`}
            >{cleanFontBody}</span
          >
          <span class="font-role">Body Text</span>
        </div>
      </div>

      <!-- Palette Card -->
      <div class="dna-card">
        <div class="card-label">
          <span class="icon">ðŸŽ¨</span> PALETTE
        </div>
        <div class="palette-grid">
          {
            palette.map((color) => (
              <div class="color-item">
                <div
                  class="color-circle"
                  style={`background-color: ${color.hex};`}
                />
                <span class="color-hex">{color.hex}</span>
                <span class="color-name">{color.name}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .vibe-dna-section {
    background-color: #fdfbf7; /* Warm off-white base */
    color: #4a4036;
    padding: 6rem 2rem;
    font-family: "Inter", sans-serif; /* Neutral font for the UI itself */
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .dna-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  @media (min-width: 900px) {
    .dna-container {
      flex-direction: row;
      align-items: flex-start;
    }
  }

  .dna-info {
    flex: 1;
    max-width: 400px;
  }

  .dna-title {
    font-family:
      "Playfair Display", serif; /* Elegant serif for the "Vibe DNA" title */
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: #2c2420;
  }

  .dna-desc {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #6b5d55;
  }

  .dna-cards {
    flex: 2;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .dna-cards {
      flex-direction: row;
    }
  }

  .dna-card {
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 12px;
    padding: 2rem;
    flex: 1;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.02);
  }

  .card-label {
    font-size: 0.8rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: #c1a17c; /* Gold/Bronze accent */
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
  }

  .font-sample {
    margin-bottom: 1.5rem;
  }

  .font-sample:last-child {
    margin-bottom: 0;
  }

  .font-name {
    display: block;
    font-size: 2rem;
    line-height: 1.2;
    margin-bottom: 0.25rem;
    color: #2c2420;
  }

  .font-role {
    font-size: 0.8rem;
    color: #9ca3af;
  }

  .palette-grid {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .color-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .color-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.1);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .color-hex {
    font-family: monospace;
    font-size: 0.8rem;
    color: #9ca3af;
  }

  .color-name {
    font-size: 0.7rem;
    color: #6b5d55;
    text-align: center;
    max-width: 70px;
  }
</style>
