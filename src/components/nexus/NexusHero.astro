<section
    class="nexus-hero relative w-full h-screen flex items-center justify-center overflow-hidden"
>
    <div class="relative z-10 text-center">
        <h1
            class="font-display font-black text-6xl md:text-9xl tracking-tighter leading-[0.9] relative group"
        >
            <span
                class="block text-white relative inline-block glitch-text"
                data-text="REALITY">REALITY</span
            >
            <span class="block text-white">IS</span>
            <span
                class="block text-[#BF00FF] drop-shadow-[0_0_15px_rgba(191,0,255,0.6)] relative inline-block glitch-text"
                data-text="BORING."
            >
                BORING.
            </span>
        </h1>
    </div>
</section>

<style>
    .nexus-hero {
        /* Transparent background to let the fixed hero image show through */
        background: transparent;
    }

    .glitch-text {
        position: relative;
    }
    .glitch-text::before,
    .glitch-text::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: transparent; /* Transparent to match parent */
    }
    .glitch-text::before {
        left: 2px;
        text-shadow: -1px 0 #00ffff;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }
    .glitch-text::after {
        left: -2px;
        text-shadow: -1px 0 #ff00ff;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }
    @keyframes glitch-anim {
        0% {
            clip: rect(30px, 9999px, 10px, 0);
        }
        20% {
            clip: rect(85px, 9999px, 90px, 0);
        }
        40% {
            clip: rect(10px, 9999px, 60px, 0);
        }
        60% {
            clip: rect(60px, 9999px, 20px, 0);
        }
        80% {
            clip: rect(20px, 9999px, 80px, 0);
        }
        100% {
            clip: rect(50px, 9999px, 40px, 0);
        }
    }
    @keyframes glitch-anim2 {
        0% {
            clip: rect(10px, 9999px, 80px, 0);
        }
        20% {
            clip: rect(80px, 9999px, 10px, 0);
        }
        40% {
            clip: rect(40px, 9999px, 50px, 0);
        }
        60% {
            clip: rect(90px, 9999px, 30px, 0);
        }
        80% {
            clip: rect(30px, 9999px, 20px, 0);
        }
        100% {
            clip: rect(60px, 9999px, 70px, 0);
        }
    }
</style>
