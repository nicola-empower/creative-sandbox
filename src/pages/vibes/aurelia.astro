---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="Aurelia Skincare">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;400&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="aurelia-wrapper">
        <!-- Minimal Nav -->
        <nav class="nav">
            <a href="/" class="logo">AURELIA.</a>
            <div class="menu-btn">MENU</div>
        </nav>

        <!-- Main Content -->
        <main class="hero">
            <div class="hero-content">
                <h1 class="headline">
                    The Ritual <span class="italic">of</span> Return.
                </h1>
                <div class="divider"></div>
                <p class="subhead">
                    Skincare is not a routine. It is a confrontation with
                    yourself. Strip away the noise and return to the essential.
                </p>

                <button class="cta-btn">Discover The Collection</button>
                <VibeDNA
                    description="Skincare Rituals. The return to essential. A confrontation with yourself."
                    fontHeader="Playfair Display"
                    fontBody="Mulish"
                    palette={[
                        { hex: "#FDFBF7", name: "Alabaster" },
                        { hex: "#1A1A1A", name: "Charcoal" },
                        { hex: "#D4AF37", name: "Muted Gold" },
                    ]}
                />
            </div>

            <style>
                /* 
    Palette:
    Alabaster: #FDFBF7
    Charcoal: #1A1A1A
    Muted Gold: #D4AF37
  */

                :root {
                    --bg-color: #fdfbf7;
                    --text-color: #1a1a1a;
                    --accent-color: #d4af37;

                    --font-heading: "Playfair Display", serif;
                    --font-body: "Mulish", sans-serif;
                }

                .aurelia-wrapper {
                    background-color: var(--bg-color);
                    color: var(--text-color);
                    font-family: var(--font-body);
                    min-height: 100vh;
                    display: flex;
                    flex-direction: column;
                    padding: 2rem;
                    position: relative;
                    overflow: hidden;
                }

                /* Nav */
                .nav {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 1rem 2rem;
                    z-index: 10;
                }

                .logo {
                    font-family: var(--font-heading);
                    font-size: 1.5rem;
                    letter-spacing: 2px;
                    font-weight: 600;
                    color: var(--text-color);
                    text-decoration: none;
                }

                .menu-btn {
                    font-size: 0.8rem;
                    letter-spacing: 2px;
                    cursor: pointer;
                    position: relative;
                }

                .menu-btn::after {
                    content: "";
                    position: absolute;
                    bottom: -5px;
                    left: 0;
                    width: 100%;
                    height: 1px;
                    background-color: var(--text-color);
                    transform: scaleX(0);
                    transform-origin: right;
                    transition: transform 0.4s ease;
                }

                .menu-btn:hover::after {
                    transform: scaleX(1);
                    transform-origin: left;
                }

                /* Hero */
                .hero {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                    position: relative;
                    z-index: 5;
                }

                .hero-content {
                    max-width: 800px;
                    padding: 0 2rem;
                    animation: fadeInUp 1.2s ease-out;
                }

                .headline {
                    font-family: var(--font-heading);
                    font-size: 5rem;
                    font-weight: 400;
                    line-height: 1.1;
                    margin-bottom: 2rem;
                    color: var(--text-color);
                }

                .italic {
                    font-style: italic;
                    font-weight: 400;
                    color: var(--accent-color);
                }

                .divider {
                    width: 1px;
                    height: 60px;
                    background-color: var(--accent-color);
                    margin: 0 auto 2rem;
                }

                .subhead {
                    font-size: 1.1rem;
                    font-weight: 300;
                    line-height: 1.8;
                    margin-bottom: 3rem;
                    max-width: 500px;
                    margin-left: auto;
                    margin-right: auto;
                    color: rgba(26, 26, 26, 0.8);
                }

                /* CTA Button */
                .cta-btn {
                    background: transparent;
                    border: 1px solid var(--text-color);
                    color: var(--text-color);
                    padding: 1.2rem 3rem;
                    font-family: var(--font-body);
                    font-size: 0.8rem;
                    letter-spacing: 3px;
                    text-transform: uppercase;
                    cursor: pointer;
                    transition: all 0.5s ease;
                }

                .cta-btn:hover {
                    background-color: var(--text-color);
                    color: var(--bg-color);
                    border-color: var(--text-color);
                }

                /* Visual Element */
                .visual-element {
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    z-index: -1;
                    opacity: 0.5;
                }

                .circle {
                    width: 600px;
                    height: 600px;
                    border: 1px solid rgba(212, 175, 55, 0.2);
                    border-radius: 50%;
                    animation: breathe 10s infinite ease-in-out;
                }

                /* Footer */
                .footer {
                    display: flex;
                    justify-content: space-between;
                    padding: 1rem 2rem;
                    font-size: 0.7rem;
                    letter-spacing: 2px;
                    opacity: 0.5;
                }

                /* Animations */
                @keyframes breathe {
                    0%,
                    100% {
                        transform: scale(1);
                        opacity: 0.5;
                    }
                    50% {
                        transform: scale(1.05);
                        opacity: 0.8;
                    }
                }

                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }

                /* Responsive */
                @media (max-width: 768px) {
                    .headline {
                        font-size: 3rem;
                    }

                    .circle {
                        width: 300px;
                        height: 300px;
                    }

                    .footer {
                        flex-direction: column;
                        align-items: center;
                        gap: 1rem;
                    }
                }
            </style>
        </main>

        <!-- Philosophy Section -->
        <section class="philosophy">
            <div class="philosophy-content">
                <span class="section-label">THE PHILOSOPHY</span>
                <h2>Beauty in Restraint.</h2>
                <p>
                    We believe in the power of less. Fewer ingredients, higher
                    potency. Our formulations are designed to support the skin's
                    natural ability to heal and regenerate.
                </p>
                <div class="signature">Aurelia.</div>
            </div>
            <div class="philosophy-image">
                <img
                    src="/images/philosophy.png"
                    alt="Aurelia Philosophy"
                    class="philo-img"
                />
            </div>
        </section>

        <!-- Rituals Grid -->
        <section class="rituals">
            <div class="ritual-card">
                <div class="card-img">
                    <img
                        src="/images/ritual1.png"
                        alt="The Cleanser"
                        class="ritual-img"
                    />
                </div>
                <h3>The Cleanser</h3>
                <p>Purify without stripping.</p>
            </div>
            <div class="ritual-card">
                <div class="card-img">
                    <img
                        src="/images/ritual2.png"
                        alt="The Essence"
                        class="ritual-img"
                    />
                </div>
                <h3>The Essence</h3>
                <p>Hydrate and prepare.</p>
            </div>
            <div class="ritual-card">
                <div class="card-img">
                    <img
                        src="/images/ritual3.png"
                        alt="The Oil"
                        class="ritual-img"
                    />
                </div>
                <h3>The Oil</h3>
                <p>Nourish and protect.</p>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer-section">
            <div class="footer-content">
                <div class="footer-brand">AURELIA.</div>
                <div class="footer-links">
                    <a href="#">Shop</a>
                    <a href="#">Journal</a>
                    <a href="#">About</a>
                    <a href="#">Contact</a>
                </div>
                <div class="copyright">Â© 2025 Aurelia Skincare.</div>
            </div>
        </footer>

        <style>
            /* ... (Previous styles remain) ... */

            .aurelia-wrapper {
                background-color: var(--bg-color);
                color: var(--text-color);
                font-family: var(--font-body);
                min-height: 100vh;
                display: flex;
                flex-direction: column;
                position: relative;
                overflow-x: hidden; /* Allow vertical scroll */
            }

            /* ... (Nav styles remain) ... */

            /* Hero adjustments */
            .hero {
                min-height: 90vh; /* Occupy full screen initially */
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                position: relative;
                z-index: 5;
                padding: 4rem 0;
            }

            /* Philosophy Section */
            .philosophy {
                padding: 8rem 2rem;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 4rem;
                max-width: 1200px;
                margin: 0 auto;
            }

            @media (min-width: 768px) {
                .philosophy {
                    flex-direction: row;
                    justify-content: space-between;
                }
            }

            .philosophy-content {
                flex: 1;
                max-width: 500px;
            }

            .section-label {
                font-size: 0.8rem;
                letter-spacing: 3px;
                text-transform: uppercase;
                color: var(--accent-color);
                display: block;
                margin-bottom: 2rem;
            }

            .philosophy h2 {
                font-family: var(--font-heading);
                font-size: 3rem;
                margin-bottom: 2rem;
                line-height: 1.2;
            }

            .philosophy p {
                font-size: 1.1rem;
                line-height: 1.8;
                margin-bottom: 3rem;
                color: rgba(26, 26, 26, 0.8);
            }

            .signature {
                font-family: var(--font-heading);
                font-size: 2rem;
                font-style: italic;
                color: var(--accent-color);
            }

            .philosophy-image {
                flex: 1;
                width: 100%;
                height: 500px;
                position: relative;
            }

            .philo-img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 200px 200px 0 0;
            }

            /* Rituals Section */
            .rituals {
                padding: 6rem 2rem;
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 4rem;
                max-width: 1400px;
                margin: 0 auto;
            }

            .ritual-card {
                text-align: center;
                cursor: pointer;
                transition: transform 0.3s ease;
            }

            .ritual-card:hover {
                transform: translateY(-10px);
            }

            .card-img {
                width: 100%;
                aspect-ratio: 3/4;
                background-color: #f5f5f5;
                margin-bottom: 2rem;
                border-radius: 4px;
                overflow: hidden;
            }

            .ritual-img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

            .ritual-card:hover .ritual-img {
                transform: scale(1.05);
            }

            .ritual-card h3 {
                font-family: var(--font-heading);
                font-size: 1.5rem;
                margin-bottom: 0.5rem;
            }

            .ritual-card p {
                font-size: 0.9rem;
                letter-spacing: 1px;
                opacity: 0.7;
                text-transform: uppercase;
            }

            /* Footer Section */
            .footer-section {
                background-color: var(--text-color);
                color: var(--bg-color);
                padding: 6rem 2rem;
                text-align: center;
            }

            .footer-brand {
                font-family: var(--font-heading);
                font-size: 2rem;
                margin-bottom: 3rem;
            }

            .footer-links {
                display: flex;
                justify-content: center;
                gap: 3rem;
                margin-bottom: 4rem;
                font-size: 0.9rem;
                letter-spacing: 2px;
                text-transform: uppercase;
            }

            .footer-links a {
                color: var(--bg-color);
                text-decoration: none;
                opacity: 0.7;
                transition: opacity 0.3s;
            }

            .footer-links a:hover {
                opacity: 1;
            }

            .copyright {
                font-size: 0.8rem;
                opacity: 0.4;
            }
        </style>
    </div></BlankLayout
>
