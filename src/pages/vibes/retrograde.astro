---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="RETROGRADE | Vintage Music Festival">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Shrikhand&family=DM+Sans:wght@400;700&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="retro-wrapper">
        <!-- Noise Texture -->
        <div class="noise-overlay"></div>

        <!-- Sticky Header -->
        <header class="header">
            <div class="marquee-container">
                <div class="marquee-content">
                    <span
                        >LIVE MUSIC • VINTAGE VIBES • GOOD TIMES • EST. 1975 •
                    </span>
                    <span
                        >LIVE MUSIC • VINTAGE VIBES • GOOD TIMES • EST. 1975 •
                    </span>
                    <span
                        >LIVE MUSIC • VINTAGE VIBES • GOOD TIMES • EST. 1975 •
                    </span>
                    <span
                        >LIVE MUSIC • VINTAGE VIBES • GOOD TIMES • EST. 1975 •
                    </span>
                </div>
            </div>
            <nav class="nav-bar">
                <a href="/" class="brand-small">R/G</a>
                <div class="links">
                    <a href="#lineup">LINEUP</a>
                    <a href="#tickets">TICKETS</a>
                    <a href="#info">INFO</a>
                </div>
            </nav>
        </header>

        <main>
            <!-- Hero Section -->
            <section class="hero">
                <div class="sunset-stripes">
                    <div class="stripe s1"></div>
                    <div class="stripe s2"></div>
                    <div class="stripe s3"></div>
                </div>

                <div class="hero-content">
                    <h1 class="retro-title">RETRO<br />GRADE</h1>
                    <p class="date-location">JULY 14-16 • SUNSET CANYON</p>
                    <a href="#tickets" class="ticket-btn">GET PASSES</a>
                </div>
            </section>

            <!-- Lineup Section -->
            <section id="lineup" class="lineup-section">
                <div class="container">
                    <h2 class="section-title">THE LINEUP</h2>

                    <div class="artist-list">
                        <div class="headliner">THE VELVET UNDERGROUNDS</div>
                        <div class="headliner">FLEETWOOD & THE MACS</div>
                        <div class="headliner">COSMIC DISCO</div>

                        <div class="support-acts">
                            <span>Electric Dreams</span> •
                            <span>The Groovy Cats</span> •
                            <span>Neon Sunset</span> •
                            <span>Daisy & The Dukes</span> •
                            <span>Analog Hearts</span> •
                            <span>Vinyl Richie</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Info / Vibe Section -->
            <section id="info" class="info-section">
                <div class="container split">
                    <div class="info-block">
                        <h3>CAMPING</h3>
                        <p>
                            Bring your van, your tent, or just your soul. We
                            have spots under the stars waiting for you.
                        </p>
                    </div>
                    <div class="info-block">
                        <h3>ART</h3>
                        <p>
                            Immersive installations that melt your mind and
                            expand your consciousness.
                        </p>
                    </div>
                    <div class="info-block">
                        <h3>FOOD</h3>
                        <p>
                            Organic, local, and delicious. Fuel for dancing all
                            night long.
                        </p>
                    </div>
                </div>
            </section>
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="sun-graphic"></div>
            <div class="footer-content">
                <div class="footer-logo">RETROGRADE</div>
                <div class="socials">
                    <a href="#">INSTAGRAM</a>
                    <a href="#">FACEBOOK</a>
                    <a href="#">TIKTOK</a>
                </div>
                <p class="copyright">&copy; 2025 RETROGRADE FESTIVAL</p>
            </div>
        </footer>

        <VibeDNA
            description="Vintage Music Festival. Energetic, Retro, Bubbly."
            fontHeader="Shrikhand"
            fontBody="DM Sans"
            palette={[
                { hex: "#F4F3C5", name: "Cream Noise" },
                { hex: "#1C646B", name: "Deep Teal" },
                { hex: "#F9B264", name: "Sunset Gold" },
                { hex: "#D57D6D", name: "Terracotta" },
                { hex: "#A53852", name: "Berry" },
            ]}
        />
    </div>

    <style>
        :root {
            /* Palette */
            --bg-cream: #f4f3c5;
            --teal: #1c646b;
            --gold: #f9b264;
            --terra: #d57d6d;
            --berry: #a53852;

            --font-display: "Shrikhand", cursive;
            --font-body: "DM Sans", sans-serif;
        }

        .retro-wrapper {
            background-color: var(--bg-cream);
            color: var(--teal);
            font-family: var(--font-body);
            overflow-x: hidden;
            min-height: 100vh;
            position: relative;
        }

        /* Noise Filter */
        .noise-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.08'/%3E%3C/svg%3E");
            pointer-events: none;
            z-index: 1000;
        }

        /* Header */
        .header {
            position: sticky;
            top: 0;
            z-index: 500;
        }

        .marquee-container {
            background-color: var(--teal);
            color: var(--bg-cream);
            padding: 0.5rem 0;
            overflow: hidden;
            white-space: nowrap;
            font-weight: 700;
            font-size: 0.8rem;
            letter-spacing: 0.1em;
        }

        .marquee-content {
            display: inline-block;
            animation: scroll 20s linear infinite;
        }

        @keyframes scroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

        .nav-bar {
            background-color: rgba(244, 243, 197, 0.9);
            backdrop-filter: blur(5px);
            padding: 1rem 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid var(--teal);
        }

        .brand-small {
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: var(--teal);
            text-decoration: none;
        }

        .links {
            display: flex;
            gap: 1.5rem;
        }

        .links a {
            text-decoration: none;
            color: var(--teal);
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .links a:hover {
            color: var(--berry);
            text-decoration: underline;
            text-decoration-thickness: 3px;
        }

        /* Hero */
        .hero {
            position: relative;
            min-height: 90vh; /* Fill screen */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            overflow: hidden;
        }

        .sunset-stripes {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            display: flex;
            flex-direction: column;
        }

        .stripe {
            flex: 1;
            width: 100%;
        }

        .s1 {
            background-color: var(--gold);
        }
        .s2 {
            background-color: var(--terra);
        }
        .s3 {
            background-color: var(--berry);
        }

        /* Slant separation using clip-path could be cool, but let's keep it simple strips for now or maybe gradients */
        .sunset-stripes {
            background: linear-gradient(
                180deg,
                var(--gold) 0%,
                var(--terra) 50%,
                var(--berry) 100%
            );
            /* Mask */
            -webkit-mask-image: radial-gradient(
                circle at 50% 50%,
                black 30%,
                transparent 80%
            );
            mask-image: radial-gradient(
                circle at 50% 50%,
                black 30%,
                transparent 80%
            );
            opacity: 0.8;
        }

        .hero-content {
            position: relative;
            z-index: 10;
        }

        .retro-title {
            font-family: var(--font-display);
            font-size: 6rem;
            line-height: 0.9;
            color: var(--bg-cream); /* Cream text */
            text-shadow:
                4px 4px 0px var(--teal),
                8px 8px 0px var(--berry);
            margin-bottom: 1rem;
            transform: rotate(-3deg);
        }

        @media (min-width: 768px) {
            .retro-title {
                font-size: 10rem;
            }
        }

        .date-location {
            font-weight: 700;
            font-size: 1.2rem;
            color: var(--bg-cream);
            text-shadow: 2px 2px 0px var(--teal);
            margin-bottom: 3rem;
            letter-spacing: 0.2em;
        }

        .ticket-btn {
            background-color: var(--bg-cream);
            color: var(--teal);
            padding: 1rem 3rem;
            font-family: var(--font-display);
            font-size: 1.5rem;
            text-decoration: none;
            border: 3px solid var(--teal);
            border-radius: 50px;
            box-shadow: 5px 5px 0px var(--teal);
            transition: all 0.2s;
            display: inline-block;
        }

        .ticket-btn:hover {
            transform: translate(-2px, -2px);
            box-shadow: 7px 7px 0px var(--teal);
            background-color: var(--gold);
        }

        /* Lineup */
        .lineup-section {
            background-color: var(--bg-cream);
            padding: 6rem 5%;
            text-align: center;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .section-title {
            font-family: var(--font-display);
            font-size: 3rem;
            color: var(--berry);
            margin-bottom: 3rem;
            text-shadow: 2px 2px 0px var(--gold);
        }

        .headliner {
            font-family: var(--font-display);
            font-size: 3rem;
            line-height: 1.2;
            color: var(--teal);
            margin-bottom: 1rem;
            text-transform: uppercase;
        }

        @media (min-width: 768px) {
            .headliner {
                font-size: 4.5rem;
            }
        }

        .support-acts {
            margin-top: 3rem;
            font-size: 1.2rem;
            font-weight: 700;
            line-height: 2;
            color: var(--terra);
        }

        /* Info */
        .info-section {
            background-color: var(--teal);
            color: var(--bg-cream);
            padding: 6rem 5%;
        }

        .split {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
        }

        .info-block h3 {
            font-family: var(--font-display);
            font-size: 2rem;
            color: var(--gold);
            margin-bottom: 1rem;
        }

        .info-block p {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        /* Footer */
        .footer {
            background-color: var(--berry);
            color: var(--bg-cream);
            padding: 4rem 5% 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .sun-graphic {
            width: 300px;
            height: 150px;
            background-color: var(--gold);
            border-radius: 150px 150px 0 0;
            margin: 0 auto 2rem;
            position: relative;
            bottom: -2rem; /* Half sink */
        }

        .footer-logo {
            font-family: var(--font-display);
            font-size: 3rem;
            margin-bottom: 2rem;
            color: var(--bg-cream);
        }

        .socials {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .socials a {
            color: var(--bg-cream);
            text-decoration: none;
            font-weight: 700;
        }

        .socials a:hover {
            color: var(--gold);
        }

        .copyright {
            font-size: 0.8rem;
            opacity: 0.7;
        }
    </style>
</BlankLayout>
