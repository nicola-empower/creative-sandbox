---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="LUNA - Sleep Architecture">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/chart.js" is:inline></script>
    </Fragment>

    <div class="luna-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <div class="logo-icon"></div>
                <span>LUNA</span>
            </div>

            <nav class="side-nav">
                <a href="#" class="nav-item active">
                    <span class="icon">üìä</span>
                    Dashboard
                </a>
                <a href="#" class="nav-item">
                    <span class="icon">üí§</span>
                    Sleep Data
                </a>
                <a href="#" class="nav-item">
                    <span class="icon">‚ù§Ô∏è</span>
                    Recovery
                </a>
                <a href="#" class="nav-item">
                    <span class="icon">‚öôÔ∏è</span>
                    Settings
                </a>
            </nav>

            <div class="user-profile">
                <div class="avatar"></div>
                <div class="user-info">
                    <span class="name">Alex D.</span>
                    <span class="trend up">‚ñ≤ 2%</span>
                </div>
                <div class="score-circle">
                    <svg viewBox="0 0 36 36" class="circular-chart">
                        <path
                            class="circle-bg"
                            d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831"
                        ></path>
                        <path
                            class="circle"
                            stroke-dasharray="85, 100"
                            d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831"
                        ></path>
                        <text x="18" y="20.35" class="percentage">85</text>
                    </svg>
                    <div class="score-label">OPTIMAL</div>
                </div>
            </div>
        </aside>

        <main class="main-content">
            <div class="top-bar">
                <h1>Dashboard</h1>
                <div class="actions">
                    <span class="date">Today, 2 Dec</span>
                    <button class="sync-btn">Sync Device</button>
                </div>
            </div>

            <VibeDNA
                description="Sleep Science. Data-driven rest. The quantified self."
                fontHeader="Orbitron"
                fontBody="Space Mono"
                palette={[
                    { hex: "#011C40", name: "Abyss Blue" },
                    { hex: "#54ACBF", name: "Electric Cyan" },
                    { hex: "#A7EBF2", name: "Glacial Ice" },
                ]}
            />

            <div class="dashboard-grid">
                <!-- HRV Graph Card -->
                <div class="card graph-card glass-panel">
                    <div class="card-header">
                        <h3>HEART RATE VARIABILITY (HRV)</h3>
                        <div class="legend">
                            <span class="dot"></span> Avg: 42ms
                        </div>
                    </div>
                    <div class="chart-container">
                        <canvas id="hrvChart"></canvas>
                    </div>
                </div>

                <!-- Stats Row -->
                <div class="card stat-card glass-panel">
                    <h3>DEEP SLEEP</h3>
                    <div class="stat-value">1h 45m</div>
                    <div class="stat-sub">18% of total</div>
                </div>

                <div class="card stat-card glass-panel">
                    <h3>REM SLEEP</h3>
                    <div class="stat-value">2h 10m</div>
                    <div class="stat-sub">24% of total</div>
                </div>

                <div class="card stat-card glass-panel">
                    <h3>RESTING HR</h3>
                    <div class="stat-value">
                        52 <span class="unit">BPM</span>
                    </div>
                    <div class="stat-sub">Lowest: 48</div>
                </div>
            </div>
        </main>
    </div>

    <script>
        declare const Chart: any;

        // Chart.js Initialization
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById(
                "hrvChart",
            ) as HTMLCanvasElement | null;
            if (!ctx) return;

            // Palette
            const electricCyan = "#54ACBF";
            const steelHorizon = "#26658C";
            const glacialIce = "#A7EBF2";

            // Gradient Fill
            const context = ctx.getContext("2d");
            if (!context) return;

            const gradient = context.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, "rgba(84, 172, 191, 0.5)"); // Electric Cyan low opacity
            gradient.addColorStop(1, "rgba(84, 172, 191, 0)");

            new Chart(ctx, {
                type: "line",
                data: {
                    labels: [
                        "10PM",
                        "11PM",
                        "12AM",
                        "1AM",
                        "2AM",
                        "3AM",
                        "4AM",
                        "5AM",
                        "6AM",
                    ],
                    datasets: [
                        {
                            label: "HRV (ms)",
                            data: [35, 38, 42, 45, 55, 50, 48, 42, 38],
                            borderColor: electricCyan,
                            backgroundColor: gradient,
                            borderWidth: 3,
                            tension: 0.4,
                            fill: true,
                            pointBackgroundColor: glacialIce,
                            pointBorderColor: "#fff",
                            pointRadius: 4,
                            pointHoverRadius: 7,
                            pointHoverBackgroundColor: "#fff",
                            pointHoverBorderColor: electricCyan,
                        },
                    ],
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: "rgba(2, 56, 89, 0.9)",
                            titleColor: glacialIce,
                            bodyColor: "#fff",
                            borderColor: electricCyan,
                            borderWidth: 1,
                            displayColors: false,
                            callbacks: {
                                label: function (context: any) {
                                    return context.parsed.y + " ms";
                                },
                            },
                        },
                    },
                    scales: {
                        y: {
                            grid: {
                                color: "rgba(38, 101, 140, 0.2)",
                                borderColor: "transparent",
                            },
                            ticks: {
                                color: steelHorizon,
                                font: { family: "Space Mono" },
                            },
                        },
                        x: {
                            grid: { display: false },
                            ticks: {
                                color: steelHorizon,
                                font: { family: "Space Mono" },
                            },
                        },
                    },
                    elements: {
                        line: {
                            shadowBlur: 10,
                            shadowColor: electricCyan,
                        },
                    },
                },
            });
        });
    </script>

    <style>
        /* 
        Palette:
        Abyss Blue: #011C40 (Background)
        Deep Navy: #023859 (Secondary)
        Steel Horizon: #26658C (Muted)
        Electric Cyan: #54ACBF (Primary)
        Glacial Ice: #A7EBF2 (Glow)
      */

        :root {
            --bg-main: #011c40;
            --bg-secondary: #023859;
            --text-muted: #26658c;
            --primary-cyan: #54acbf;
            --glow-ice: #a7ebf2;

            --font-heading: "Orbitron", sans-serif;
            --font-data: "Space Mono", monospace;
        }

        .luna-wrapper {
            background-color: var(--bg-main);
            color: #fff;
            font-family: var(--font-heading);
            min-height: 100vh;
            display: flex;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: var(--bg-secondary);
            display: flex;
            flex-direction: column;
            padding: 2rem;
            border-right: 1px solid rgba(84, 172, 191, 0.1);
            position: fixed;
            height: 100vh;
            z-index: 10;
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 60px;
                padding: 1rem 0.5rem;
            }
            .logo span,
            .nav-item span:not(.icon),
            .user-info {
                display: none;
            }
            .nav-item {
                justify-content: center;
            }
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 4rem;
            color: var(--glow-ice);
            font-weight: 700;
            letter-spacing: 2px;
            font-size: 1.5rem;
        }

        .logo-icon {
            width: 30px;
            height: 30px;
            background: radial-gradient(
                circle,
                var(--glow-ice),
                var(--primary-cyan)
            );
            border-radius: 50%;
            box-shadow: 0 0 15px var(--primary-cyan);
        }

        .side-nav {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            flex: 1;
        }

        .nav-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            color: var(--text-muted);
            text-decoration: none;
            padding: 0.8rem 1rem;
            border-radius: 8px;
            transition: all 0.3s;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        .nav-item:hover,
        .nav-item.active {
            background-color: rgba(84, 172, 191, 0.1);
            color: var(--glow-ice);
            box-shadow: 0 0 10px rgba(84, 172, 191, 0.1);
        }

        .nav-item.active {
            border-left: 3px solid var(--primary-cyan);
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(38, 101, 140, 0.3);
        }

        .avatar {
            width: 40px;
            height: 40px;
            background-color: var(--text-muted);
            border-radius: 50%;
            border: 2px solid var(--primary-cyan);
        }

        .user-info {
            display: flex;
            flex-direction: column;
        }

        .name {
            font-size: 0.9rem;
            font-weight: 600;
        }

        .status {
            font-size: 0.7rem;
            color: var(--primary-cyan);
            font-family: var(--font-data);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 2rem 3rem;
        }

        @media (max-width: 768px) {
            .main-content {
                margin-left: 60px;
                padding: 1rem;
            }
        }

        /* Header */
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 3rem;
        }

        h1 {
            font-size: 2rem;
            letter-spacing: 2px;
            color: #fff;
            text-shadow: 0 0 10px rgba(84, 172, 191, 0.3);
        }

        .actions {
            display: flex;
            align-items: center;
            gap: 2rem;
        }

        .date {
            font-family: var(--font-data);
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .sync-btn {
            background-color: var(--primary-cyan);
            color: var(--bg-main);
            border: none;
            padding: 0.8rem 1.5rem;
            font-family: var(--font-heading);
            font-weight: 700;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 0 20px rgba(84, 172, 191, 0.4);
            transition: all 0.3s;
        }

        .sync-btn:hover {
            background-color: var(--glow-ice);
            box-shadow: 0 0 30px rgba(167, 235, 242, 0.6);
        }

        /* Dashboard Grid */
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: auto auto;
            gap: 1.5rem;
        }

        @media (max-width: 768px) {
            .dashboard-grid {
                display: flex;
                flex-direction: column;
                gap: 1rem;
            }
        }

        .glass-panel {
            background: rgba(2, 56, 89, 0.6);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(84, 172, 191, 0.2);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        h3 {
            font-size: 0.8rem;
            color: var(--text-muted);
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
        }

        /* Score Card */
        .score-card {
            grid-column: span 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        @media (max-width: 1024px) {
            .score-card {
                grid-column: span 4;
            }
        }

        .trend {
            font-family: var(--font-data);
            font-size: 0.8rem;
        }

        .up {
            color: var(--primary-cyan);
        }

        .score-circle {
            position: relative;
            width: 150px;
            height: 150px;
        }

        .circular-chart {
            display: block;
            margin: 0 auto;
            max-width: 100%;
            max-height: 250px;
        }

        .circle-bg {
            fill: none;
            stroke: rgba(38, 101, 140, 0.2);
            stroke-width: 2.5;
        }

        .circle {
            fill: none;
            stroke: var(--glow-ice);
            stroke-width: 2.5;
            stroke-linecap: round;
            animation: progress 1s ease-out forwards;
            filter: drop-shadow(0 0 5px var(--primary-cyan));
        }

        .percentage {
            fill: #fff;
            font-family: var(--font-data);
            font-weight: bold;
            font-size: 0.6rem;
            text-anchor: middle;
        }

        .score-label {
            text-align: center;
            margin-top: 1rem;
            color: var(--glow-ice);
            font-size: 0.9rem;
            letter-spacing: 2px;
        }

        /* Graph Card */
        .graph-card {
            grid-column: span 3;
        }

        @media (max-width: 1024px) {
            .graph-card {
                grid-column: span 4;
            }
        }

        .chart-container {
            height: 300px;
            width: 100%;
        }

        .legend {
            font-family: var(--font-data);
            font-size: 0.8rem;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .dot {
            width: 8px;
            height: 8px;
            background-color: var(--primary-cyan);
            border-radius: 50%;
            box-shadow: 0 0 5px var(--primary-cyan);
        }

        /* Stat Cards */
        .stat-card {
            grid-column: span 1; /* Default 1/4 width */
        }

        @media (max-width: 768px) {
            .stat-card {
                width: 100%; /* Full width on mobile */
            }
        }

        @media (min-width: 769px) and (max-width: 1024px) {
            .stat-card {
                grid-column: span 2;
            } /* Half width on tablet */
        }

        /* Make stats span remaining space if needed, but 3 cards fit nicely in 4 cols if one is double? No, let's keep it simple grid */
        /* Actually, let's make the bottom row 3 columns */
        .dashboard-grid {
            /* Override for bottom row */
        }

        .stat-card {
            /* Force them to be larger */
            grid-column: span 1;
        }

        /* Fix grid for bottom row items */
        .stat-card:nth-child(3) {
            grid-column: span 1;
        } /* Deep Sleep */
        .stat-card:nth-child(4) {
            grid-column: span 1;
        } /* REM */
        .stat-card:nth-child(5) {
            grid-column: span 2;
        } /* Resting HR - wider */

        .stat-value {
            font-family: var(--font-data);
            font-size: 2.5rem;
            color: #fff;
            margin: 0.5rem 0;
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        .unit {
            font-size: 1rem;
            color: var(--text-muted);
        }

        .stat-sub {
            font-size: 0.8rem;
            color: var(--text-muted);
        }

        @keyframes progress {
            0% {
                stroke-dasharray: 0 100;
            }
        }
    </style>
</BlankLayout>
