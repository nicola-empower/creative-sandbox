---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="Little Cloud Organics | Pure Baby">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Quicksand:wght@300;400;500;600&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="cloud-wrapper">
        <!-- Nav -->
        <nav class="nav">
            <div class="logo">Little Cloud</div>
            <div class="nav-links">
                <a href="#shop">SHOP</a>
                <a href="#about">OUR STORY</a>
                <button class="cart-btn">BASKET (0)</button>
            </div>
        </nav>

        <!-- Hero -->
        <header class="hero">
            <div class="hero-content">
                <span class="eyebrow">ORGANIC COTTON & BAMBOO</span>
                <h1 class="headline">Soft as a<br />Cloud.</h1>
                <p class="subhead">
                    Gentle, sustainable essentials for your little one's
                    delicate skin.
                </p>
                <button class="cta-btn">SHOP NEW ARRIVALS</button>
            </div>
            <div class="hero-visual">
                <div class="cloud-image">
                    <img
                        src="https://images.unsplash.com/photo-1519689680058-324335c77eba?q=80&w=600&auto=format&fit=crop"
                        alt="Sleeping Baby"
                    />
                </div>
                <div class="floating-cloud cloud-1">☁️</div>
                <div class="floating-cloud cloud-2">☁️</div>
            </div>
        </header>

        <!-- Shop Section -->
        <section id="shop" class="shop-section">
            <div class="section-header">
                <h2>CUDDLE READY</h2>
                <div class="pill-decoration"></div>
            </div>
            <div class="product-grid">
                <!-- Product 1 -->
                <div class="product-card">
                    <div class="image-container">
                        <img
                            src="https://images.unsplash.com/photo-1522771930-78848d9293e8?q=80&w=400&auto=format&fit=crop"
                            alt="Cloud Romper"
                        />
                        <div class="quick-view">
                            <button>QUICK ADD +</button>
                        </div>
                    </div>
                    <div class="product-info">
                        <h3>Cloud Romper</h3>
                        <span class="price">£24.00</span>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="product-card">
                    <div class="image-container">
                        <img
                            src="https://images.unsplash.com/photo-1515488042361-ee00e0ddd4e4?q=80&w=400&auto=format&fit=crop"
                            alt="Bamboo Swaddle"
                        />
                        <div class="quick-view">
                            <button>QUICK ADD +</button>
                        </div>
                    </div>
                    <div class="product-info">
                        <h3>Bamboo Swaddle</h3>
                        <span class="price">£18.00</span>
                    </div>
                </div>
                <!-- Product 3 -->
                <div class="product-card">
                    <div class="image-container">
                        <img
                            src="https://images.unsplash.com/photo-1555252333-9f8e92e65df9?q=80&w=400&auto=format&fit=crop"
                            alt="Knitted Booties"
                        />
                        <div class="quick-view">
                            <button>QUICK ADD +</button>
                        </div>
                    </div>
                    <div class="product-info">
                        <h3>Knitted Booties</h3>
                        <span class="price">£12.00</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="about-section">
            <div class="about-content">
                <h2>PURE & SAFE</h2>
                <p>
                    We use only GOTS certified organic cotton and bamboo fibers.
                    No harsh chemicals, just pure softness for your peace of
                    mind.
                </p>
                <div class="features">
                    <div class="feature-pill">Hypoallergenic</div>
                    <div class="feature-pill">Breathable</div>
                    <div class="feature-pill">Eco-Friendly</div>
                </div>
            </div>
        </section>

        <footer class="footer">
            <div class="footer-logo">Little Cloud</div>
            <p>Made with love for tiny humans.</p>
        </footer>

        <VibeDNA
            description="Gentle, soft, and innocent. A cloud-like experience for parents and babies."
            fontHeader="Nunito"
            fontBody="Quicksand"
            palette={[
                { hex: "#F1C6D9", name: "Candy Blush" },
                { hex: "#EEB3C9", name: "Rosy Glow" },
                { hex: "#DAC2E2", name: "Lilac Mist" },
                { hex: "#C7D7E8", name: "Daydream Blue" },
                { hex: "#9CB6CF", name: "Powder Blue" },
            ]}
        />
    </div>
</BlankLayout>

<style>
    :root {
        --candy-blush: #f1c6d9;
        --rosy-glow: #eeb3c9;
        --lilac-mist: #dac2e2;
        --daydream-blue: #c7d7e8;
        --powder-blue: #9cb6cf;
        --white: #ffffff;

        --font-heading: "Nunito", sans-serif;
        --font-body: "Quicksand", sans-serif;
    }

    .cloud-wrapper {
        background-color: var(--daydream-blue);
        color: var(--powder-blue);
        font-family: var(--font-body);
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Nav */
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 3rem;
        background: var(--white);
        border-bottom-left-radius: 30px;
        border-bottom-right-radius: 30px;
        box-shadow: 0 10px 30px rgba(199, 215, 232, 0.5);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .logo {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 1.5rem;
        color: var(--powder-blue);
        letter-spacing: -0.5px;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links a {
        color: #888;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

    .nav-links a:hover {
        color: var(--rosy-glow);
    }

    .cart-btn {
        background-color: var(--candy-blush);
        color: var(--white);
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-weight: 700;
        font-family: var(--font-heading);
        cursor: pointer;
        transition: transform 0.2s;
    }

    .cart-btn:hover {
        transform: scale(1.05);
        background-color: var(--rosy-glow);
    }

    /* Hero */
    .hero {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 3rem;
        min-height: 80vh;
    }

    .hero-content {
        flex: 1;
        padding-right: 2rem;
    }

    .eyebrow {
        font-weight: 700;
        color: var(--white);
        background: var(--powder-blue);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        display: inline-block;
        margin-bottom: 1.5rem;
    }

    .headline {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 4.5rem;
        line-height: 1;
        color: var(--white);
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.05);
    }

    .subhead {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 2.5rem;
        max-width: 450px;
        line-height: 1.6;
    }

    .cta-btn {
        background-color: var(--white);
        color: var(--powder-blue);
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 1.1rem;
        cursor: pointer;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s;
    }

    .cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        color: var(--rosy-glow);
    }

    .hero-visual {
        flex: 1;
        position: relative;
        display: flex;
        justify-content: center;
    }

    .cloud-image {
        width: 450px;
        height: 450px;
        overflow: hidden;
        border-radius: 46% 54% 47% 53% / 55% 43% 57% 45%; /* Organic blob shape */
        box-shadow: 20px 20px 0 var(--candy-blush);
        background: #fff;
        position: relative;
        z-index: 2;
    }

    .cloud-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .floating-cloud {
        position: absolute;
        font-size: 4rem;
        z-index: 3;
        animation: float 6s ease-in-out infinite;
    }

    .cloud-1 {
        top: -20px;
        right: 50px;
        animation-delay: 0s;
    }
    .cloud-2 {
        bottom: 20px;
        left: 50px;
        animation-delay: 3s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    /* Shop Section */
    .shop-section {
        background-color: var(--white);
        padding: 6rem 3rem;
        border-top-left-radius: 60px;
        border-top-right-radius: 60px;
        margin-top: -50px;
        position: relative;
        z-index: 10;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .section-header h2 {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 2.5rem;
        color: var(--powder-blue);
        margin-bottom: 1rem;
    }

    .pill-decoration {
        width: 80px;
        height: 8px;
        background-color: var(--candy-blush);
        border-radius: 10px;
        margin: 0 auto;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .product-card {
        text-align: center;
        group: hover;
    }

    .image-container {
        position: relative;
        border-radius: 30px;
        overflow: hidden;
        margin-bottom: 1.5rem;
        box-shadow: 0 10px 30px rgba(238, 179, 201, 0.2); /* Rosy glow shadow */
        transition: transform 0.3s;
    }

    .product-card:hover .image-container {
        transform: translateY(-5px);
    }

    .image-container img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        display: block;
    }

    .quick-view {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(218, 194, 226, 0.4); /* Lilac mist overlay */
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s;
    }

    .product-card:hover .quick-view {
        opacity: 1;
    }

    .quick-view button {
        background: var(--white);
        color: var(--powder-blue);
        border: 2px solid var(--lilac-mist);
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        font-weight: 700;
        cursor: pointer;
        transform: translateY(20px);
        transition: transform 0.3s;
    }

    .product-card:hover .quick-view button {
        transform: translateY(0);
    }

    .product-info h3 {
        font-family: var(--font-heading);
        font-weight: 700;
        color: #555;
        margin-bottom: 0.5rem;
    }

    .price {
        font-weight: 600;
        color: var(--rosy-glow);
        font-size: 1.1rem;
    }

    /* About Section */
    .about-section {
        background-color: var(--candy-blush);
        padding: 6rem 3rem;
        text-align: center;
        color: var(--white);
    }

    .about-content {
        max-width: 700px;
        margin: 0 auto;
    }

    .about-content h2 {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }

    .about-content p {
        font-size: 1.2rem;
        line-height: 1.8;
        margin-bottom: 3rem;
    }

    .features {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .feature-pill {
        background: rgba(255, 255, 255, 0.3);
        padding: 0.8rem 2rem;
        border-radius: 50px;
        font-weight: 700;
        backdrop-filter: blur(5px);
    }

    /* Footer */
    .footer {
        background-color: var(--powder-blue);
        padding: 4rem;
        text-align: center;
        color: var(--white);
        border-top-left-radius: 50% 20px;
        border-top-right-radius: 50% 20px;
        margin-top: -30px;
        position: relative;
        z-index: 20;
    }

    .footer-logo {
        font-family: var(--font-heading);
        font-weight: 800;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
        .hero {
            flex-direction: column;
            text-align: center;
        }

        .hero-content {
            padding-right: 0;
            margin-bottom: 3rem;
        }

        .headline {
            font-size: 3.5rem;
        }

        .cloud-image {
            width: 300px;
            height: 300px;
        }
    }
</style>
