---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="SOLSTICE | Summer in a Can">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Shrikhand&family=DM+Sans:opsz,wght@9..40,400;500;700&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="solstice-wrapper">
        <!-- Marquee -->
        <div class="marquee-container">
            <div class="marquee-content">
                <span>REAL FRUIT * NO SUGAR * SUMMER VIBES * </span>
                <span>REAL FRUIT * NO SUGAR * SUMMER VIBES * </span>
                <span>REAL FRUIT * NO SUGAR * SUMMER VIBES * </span>
                <span>REAL FRUIT * NO SUGAR * SUMMER VIBES * </span>
                <span>REAL FRUIT * NO SUGAR * SUMMER VIBES * </span>
                <span>REAL FRUIT * NO SUGAR * SUMMER VIBES * </span>
            </div>
        </div>

        <!-- Floating Parallax Elements (Fruit) -->
        <div class="floating-fruit fruit-1" data-speed="0.2">üçë</div>
        <div class="floating-fruit fruit-2" data-speed="0.5">üçì</div>
        <div class="floating-fruit fruit-3" data-speed="0.3">üçã</div>
        <div class="floating-fruit fruit-4" data-speed="0.6">üçí</div>

        <!-- Nav -->
        <nav class="nav">
            <div class="logo">SOLSTICE</div>
            <div class="nav-links">
                <a href="#flavors">FLAVORS</a>
                <a href="#shop">SHOP</a>
                <button class="shop-btn">GET THE VIBE</button>
            </div>
        </nav>

        <!-- Hero -->
        <header class="hero">
            <div class="hero-bg-anim"></div>
            <div class="hero-content">
                <h1 class="headline">
                    SIP THE<br /><span class="highlight">SUNSET</span>
                </h1>
                <div class="can-container">
                    <div class="can">
                        <div class="can-label">
                            <span class="can-logo">SOLSTICE</span>
                            <span class="can-flavor">PEACH PARADISE</span>
                        </div>
                    </div>
                    <div class="can-shadow"></div>
                </div>
                <p class="subhead">Premium Sparkling Water. 100% Natural.</p>
            </div>
        </header>

        <!-- Flavors (Maximalist) -->
        <section id="flavors" class="flavors-section">
            <div class="flavor-block peach">
                <h2 class="flavor-title">PEACH<br />PARADISE</h2>
                <p class="flavor-desc">Like biting into a fuzzy sunbeam.</p>
                <div class="flavor-visual">üçë</div>
            </div>
            <div class="flavor-block coral">
                <h2 class="flavor-title">CORAL<br />CRUSH</h2>
                <p class="flavor-desc">Grapefruit & Blood Orange collision.</p>
                <div class="flavor-visual">üçä</div>
            </div>
            <div class="flavor-block berry">
                <h2 class="flavor-title">BERRY<br />BLISS</h2>
                <p class="flavor-desc">
                    Wild strawberries meet sparkling clouds.
                </p>
                <div class="flavor-visual">üçì</div>
            </div>
        </section>

        <!-- Social Proof -->
        <section class="social-section">
            <h2 class="section-title">#SOLSTICESUMMER</h2>
            <div class="social-grid">
                <div class="social-card img-1"></div>
                <div class="social-card img-2"></div>
                <div class="social-card img-3"></div>
                <div class="social-card img-4"></div>
            </div>
        </section>

        <!-- Footer Wave -->
        <footer class="footer">
            <svg
                class="wave"
                viewBox="0 0 1440 320"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    fill="#EF6AB3"
                    fill-opacity="1"
                    d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
                ></path>
            </svg>
            <div class="footer-content">
                <div class="footer-logo">SOLSTICE</div>
                <div class="footer-links">
                    <a href="#">Instagram</a>
                    <a href="#">TikTok</a>
                    <a href="#">Contact</a>
                </div>
                <p class="copyright">
                    ¬© 2025 Solstice Seltzer. Drink Responsibly.
                </p>
            </div>
        </footer>

        <VibeDNA
            description="Warm, energetic, and juicy. A maximalist retro-summer dream."
            fontHeader="Shrikhand"
            fontBody="DM Sans"
            palette={[
                { hex: "#E2C5AE", name: "Cream" },
                { hex: "#E5ACBF", name: "Blush" },
                { hex: "#F28266", name: "Coral" },
                { hex: "#E29255", name: "Peach" },
                { hex: "#EF6AB3", name: "Azalea" },
            ]}
        />
    </div>
</BlankLayout>

<style>
    :root {
        --cream: #e2c5ae;
        --blush: #e5acbf;
        --coral: #f28266;
        --peach: #e29255;
        --azalea: #ef6ab3;

        --font-display: "Shrikhand", cursive;
        --font-body: "DM Sans", sans-serif;
    }

    .solstice-wrapper {
        background-color: var(--cream);
        color: var(--coral);
        font-family: var(--font-body);
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
    }

    /* Marquee */
    .marquee-container {
        background-color: var(--azalea);
        color: #fff;
        padding: 0.5rem 0;
        overflow: hidden;
        white-space: nowrap;
        position: relative;
        z-index: 20;
    }

    .marquee-content {
        display: inline-block;
        animation: marquee 20s linear infinite;
        font-family: var(--font-body);
        font-weight: 700;
        font-size: 1rem;
        letter-spacing: 2px;
    }

    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    /* Nav */
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 3rem;
        position: relative;
        z-index: 20;
    }

    .logo {
        font-family: var(--font-display);
        font-size: 2.5rem;
        color: var(--coral);
        text-shadow: 2px 2px 0 #fff;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links a {
        color: var(--coral);
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        transition: color 0.3s;
    }

    .nav-links a:hover {
        color: var(--azalea);
    }

    .shop-btn {
        background: linear-gradient(45deg, var(--peach), var(--azalea));
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        color: #fff;
        font-family: var(--font-body);
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        box-shadow: 0 5px 15px rgba(239, 106, 179, 0.4);
    }

    .shop-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(239, 106, 179, 0.6);
    }

    /* Hero */
    .hero {
        position: relative;
        min-height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
        z-index: 10;
        overflow: hidden;
    }

    .hero-bg-anim {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 50% 50%,
            var(--cream),
            var(--blush)
        );
        animation: bg-pulse 10s infinite alternate;
        z-index: -1;
    }

    @keyframes bg-pulse {
        0% {
            background: radial-gradient(
                circle at 50% 50%,
                var(--cream),
                var(--blush)
            );
        }
        100% {
            background: radial-gradient(
                circle at 50% 50%,
                var(--peach),
                var(--cream)
            );
        }
    }

    .headline {
        font-family: var(--font-display);
        font-size: 8rem;
        line-height: 0.9;
        color: var(--coral);
        text-shadow:
            4px 4px 0 #fff,
            8px 8px 0 var(--azalea);
        margin-bottom: 2rem;
        transform: rotate(-5deg);
        z-index: 2;
    }

    .headline .highlight {
        color: var(--azalea);
        text-shadow:
            4px 4px 0 #fff,
            8px 8px 0 var(--peach);
    }

    .subhead {
        font-size: 1.5rem;
        font-weight: 500;
        color: var(--azalea);
        margin-top: 2rem;
        background: #fff;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        transform: rotate(2deg);
    }

    /* Can Visual */
    .can-container {
        position: relative;
        width: 200px;
        height: 350px;
        margin: -4rem 0 0;
        z-index: 1;
        animation: float 6s ease-in-out infinite;
    }

    .can {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #fff, #f0f0f0);
        border-radius: 30px;
        position: relative;
        overflow: hidden;
        box-shadow: inset -10px -10px 20px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .can-label {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        height: 60%;
        transform: translateY(-50%);
        background: linear-gradient(45deg, var(--peach), var(--azalea));
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: #fff;
    }

    .can-logo {
        font-family: var(--font-display);
        font-size: 2rem;
        transform: rotate(-90deg);
    }

    .can-flavor {
        font-size: 0.8rem;
        font-weight: 700;
        margin-top: 1rem;
        letter-spacing: 1px;
    }

    .can-shadow {
        position: absolute;
        bottom: -40px;
        left: 50%;
        transform: translateX(-50%);
        width: 120px;
        height: 20px;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 50%;
        filter: blur(10px);
        animation: shadow-pulse 6s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(5deg);
        }
        50% {
            transform: translateY(-20px) rotate(-5deg);
        }
    }

    @keyframes shadow-pulse {
        0%,
        100% {
            transform: translateX(-50%) scale(1);
            opacity: 0.2;
        }
        50% {
            transform: translateX(-50%) scale(0.8);
            opacity: 0.1;
        }
    }

    /* Floating Fruit */
    .floating-fruit {
        position: absolute;
        font-size: 4rem;
        z-index: 5;
        opacity: 0.8;
        pointer-events: none;
    }

    .fruit-1 {
        top: 20%;
        left: 10%;
        transform: rotate(-15deg);
    }
    .fruit-2 {
        top: 60%;
        right: 15%;
        transform: rotate(20deg);
    }
    .fruit-3 {
        top: 80%;
        left: 20%;
        font-size: 6rem;
    }
    .fruit-4 {
        top: 30%;
        right: 5%;
        font-size: 3rem;
    }

    /* Flavors */
    .flavors-section {
        padding: 8rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 8rem;
        position: relative;
        z-index: 10;
    }

    .flavor-block {
        display: flex;
        align-items: center;
        justify-content: space-between;
        position: relative;
    }

    .flavor-block:nth-child(even) {
        flex-direction: row-reverse;
        text-align: right;
    }

    .flavor-title {
        font-family: var(--font-display);
        font-size: 6rem;
        line-height: 0.9;
        color: var(--coral);
        position: relative;
        z-index: 2;
    }

    .flavor-desc {
        font-size: 1.5rem;
        color: var(--azalea);
        max-width: 300px;
        font-weight: 500;
    }

    .flavor-visual {
        font-size: 15rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        opacity: 0.2;
        z-index: 1;
        filter: blur(5px);
    }

    .peach .flavor-title {
        color: var(--peach);
    }
    .coral .flavor-title {
        color: var(--coral);
    }
    .berry .flavor-title {
        color: var(--azalea);
    }

    /* Social Section */
    .social-section {
        padding: 4rem 2rem;
        text-align: center;
        position: relative;
        z-index: 10;
    }

    .section-title {
        font-family: var(--font-display);
        font-size: 3rem;
        color: var(--azalea);
        margin-bottom: 3rem;
    }

    .social-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .social-card {
        aspect-ratio: 1;
        background-color: #fff;
        border-radius: 20px;
        transition: transform 0.3s;
        background-size: cover;
        background-position: center;
        border: 4px solid #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .social-card:hover {
        transform: scale(1.05) rotate(2deg);
        z-index: 5;
    }

    /* Placeholders for social images - using gradients */
    .img-1 {
        background-image: linear-gradient(135deg, var(--peach), var(--cream));
    }
    .img-2 {
        background-image: linear-gradient(135deg, var(--blush), var(--azalea));
    }
    .img-3 {
        background-image: linear-gradient(135deg, var(--coral), var(--peach));
    }
    .img-4 {
        background-image: linear-gradient(135deg, var(--cream), var(--blush));
    }

    /* Footer */
    .footer {
        position: relative;
        background-color: var(--azalea);
        color: #fff;
        margin-top: 4rem;
    }

    .wave {
        display: block;
        width: 100%;
        height: auto;
        margin-top: -100px; /* Pull wave up */
    }

    .footer-content {
        padding: 2rem 2rem 4rem;
        text-align: center;
    }

    .footer-logo {
        font-family: var(--font-display);
        font-size: 4rem;
        margin-bottom: 2rem;
        color: var(--cream);
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-links a {
        color: #fff;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.2rem;
    }

    .copyright {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .headline {
            font-size: 4rem;
        }

        .can-container {
            width: 150px;
            height: 260px;
        }

        .flavor-title {
            font-size: 3.5rem;
        }

        .flavor-block,
        .flavor-block:nth-child(even) {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

        .flavor-visual {
            font-size: 10rem;
        }
    }
</style>

<script>
    // Parallax Effect for Floating Fruit
    window.addEventListener("scroll", () => {
        const scrolled = window.pageYOffset;
        const fruits = document.querySelectorAll(".floating-fruit");

        fruits.forEach((fruit) => {
            const speed = parseFloat(
                (fruit as HTMLElement).dataset.speed || "0.1",
            );
            const yPos = -(scrolled * speed);
            (fruit as HTMLElement).style.transform =
                `translateY(${yPos}px) rotate(${scrolled * 0.1}deg)`;
        });
    });
</script>
