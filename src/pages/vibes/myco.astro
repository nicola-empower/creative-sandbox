---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="MYCO & CO. | Sustainable Packaging">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Lato:wght@300;400;700&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="myco-wrapper">
        <!-- Navigation -->
        <nav class="nav">
            <a href="/" class="brand">Myco & Co.</a>
            <div class="links">
                <a href="#materials">Materials</a>
                <a href="#impact">Impact</a>
                <a href="#contact" class="inquire-btn">Inquire</a>
            </div>
        </nav>

        <main>
            <!-- Hero Section -->
            <section class="hero">
                <div class="hero-text">
                    <h1>
                        Packaging<br />Grown from<br />the <span
                            class="emphasis">Earth.</span>
                    </h1>
                    <p class="subhead">
                        Replacing styrofoam with mycelium. Carbon negative, 100%
                        compostable, and engineered for premium protection.
                    </p>
                    <a href="#materials" class="cta-link"
                        >Discover the Science &rarr;</a
                    >
                </div>

                <div class="hero-visual">
                    <div class="scene">
                        <div class="cube">
                            <div class="face front"></div>
                            <div class="face back"></div>
                            <div class="face right"></div>
                            <div class="face left"></div>
                            <div class="face top"></div>
                            <div class="face bottom"></div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Features -->
            <section id="materials" class="features-section">
                <div class="container grid">
                    <div class="feature-card">
                        <div class="icon-wrap">
                            <span class="number">01</span>
                        </div>
                        <h3>Grown, Not Made.</h3>
                        <p>
                            We use agricultural waste and mushroom roots to grow
                            custom packaging forms in just 7 days.
                        </p>
                    </div>

                    <div class="feature-card">
                        <div class="icon-wrap">
                            <span class="number">02</span>
                        </div>
                        <h3>Return to Earth.</h3>
                        <p>
                            Break it up and toss it in your garden. It fully
                            decomposes in 45 days, adding nutrients back to the
                            soil.
                        </p>
                    </div>

                    <div class="feature-card">
                        <div class="icon-wrap">
                            <span class="number">03</span>
                        </div>
                        <h3>Performant.</h3>
                        <p>
                            Flame resistant, hydrophobic, and shock absorbent.
                            Superior protection without the petrochemicals.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Impact / Quote -->
            <section id="impact" class="impact-section">
                <div class="quote-container">
                    <blockquote>
                        "Nature has already solved the packaging problem. We
                        just need to listen."
                    </blockquote>
                    <cite>â€” Dr. Elena Rossi, Lead Mycologist</cite>
                </div>
            </section>
        </main>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-content">
                <div class="col">
                    <div class="brand-footer">Myco & Co.</div>
                    <p>Designed for a regenerative future.</p>
                </div>
                <div class="col links-col">
                    <a href="#">Technology</a>
                    <a href="#">Custom Solutions</a>
                    <a href="#">Sustainability Report</a>
                </div>
                <div class="col">
                    <a href="#" class="contact-footer">hello@myco.co</a>
                    <p class="copy">&copy; 2025 Myco & Co.</p>
                </div>
            </div>
        </footer>

        <VibeDNA
            description="Sustainable Packaging. Biological, Soft, Innovative."
            fontHeader="Playfair Display"
            fontBody="Lato"
            palette={[
                { hex: "#EAC3BF", name: "Oyster Cap" },
                { hex: "#5A3735", name: "Truffle Blush" },
                { hex: "#9F544A", name: "Rustic Spore" },
                { hex: "#B77D77", name: "Velvet Gill" },
            ]}
        />
    </div>

    <style>
        :root {
            /* Palette */
            --oyster: #eac3bf;
            --truffle: #5a3735;
            --spore: #9f544a;
            --velvet: #b77d77;

            --font-serif: "Playfair Display", serif;
            --font-sans: "Lato", sans-serif;
        }

        .myco-wrapper {
            background-color: var(--oyster);
            color: var(--truffle);
            font-family: var(--font-sans);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Nav */
        .nav {
            padding: 2rem 5%;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brand {
            font-family: var(--font-serif);
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--truffle);
            text-decoration: none;
        }

        .links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .links a {
            text-decoration: none;
            color: var(--truffle);
            font-size: 0.9rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: color 0.2s;
        }

        .links a:hover {
            color: var(--spore);
        }

        .inquire-btn {
            border: 1px solid var(--truffle);
            padding: 0.5rem 1.5rem;
            border-radius: 2px;
        }

        .inquire-btn:hover {
            background-color: var(--truffle);
            color: var(--oyster) !important;
        }

        /* Hero */
        .hero {
            display: flex;
            flex-direction: column;
            gap: 4rem;
            padding: 4rem 5%;
            min-height: 85vh;
            align-items: center;
        }

        @media (min-width: 900px) {
            .hero {
                flex-direction: row;
                justify-content: space-between;
            }
            .hero-text {
                width: 50%;
            }
            .hero-visual {
                width: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
            }
        }

        .hero-text h1 {
            font-family: var(--font-serif);
            font-size: 3.5rem;
            line-height: 1.1;
            margin-bottom: 2rem;
        }

        @media (min-width: 768px) {
            .hero-text h1 {
                font-size: 5rem;
            }
        }

        .emphasis {
            font-style: italic;
            color: var(--spore);
        }

        .subhead {
            font-size: 1.2rem;
            line-height: 1.7;
            max-width: 450px;
            margin-bottom: 3rem;
            opacity: 0.9;
        }

        .cta-link {
            text-decoration: none;
            color: var(--truffle);
            font-weight: 700;
            border-bottom: 2px solid var(--spore);
            padding-bottom: 5px;
            transition: all 0.2s;
        }

        .cta-link:hover {
            color: var(--spore);
            border-bottom-color: var(--truffle);
        }

        /* 3D Cube Animation */
        .scene {
            width: 300px;
            height: 300px;
            perspective: 1000px;
        }

        .cube {
            width: 100%;
            height: 100%;
            position: relative;
            transform-style: preserve-3d;
            animation: rotate 15s infinite linear;
        }

        .face {
            position: absolute;
            width: 300px;
            height: 300px;
            background-color: var(--velvet);
            opacity: 0.9;
            border: 1px solid rgba(255, 255, 255, 0.1);
            /* Texture Simulation */
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.2' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.2'/%3E%3C/svg%3E");
        }

        .front {
            transform: rotateY(0deg) translateZ(150px);
        }
        .back {
            transform: rotateY(180deg) translateZ(150px);
        }
        .right {
            transform: rotateY(90deg) translateZ(150px);
        }
        .left {
            transform: rotateY(-90deg) translateZ(150px);
        }
        .top {
            transform: rotateX(90deg) translateZ(150px);
        }
        .bottom {
            transform: rotateX(-90deg) translateZ(150px);
        }

        @keyframes rotate {
            from {
                transform: rotateX(-20deg) rotateY(0deg);
            }
            to {
                transform: rotateX(-20deg) rotateY(360deg);
            }
        }

        /* Features */
        .features-section {
            padding: 6rem 5%;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 3rem;
        }

        .feature-card {
            border-top: 1px solid var(--truffle);
            padding-top: 2rem;
        }

        .icon-wrap {
            margin-bottom: 1.5rem;
        }

        .number {
            font-family: var(--font-serif);
            font-size: 2rem;
            color: var(--spore);
            font-style: italic;
        }

        .feature-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-family: var(--font-serif);
        }

        .feature-card p {
            line-height: 1.6;
            opacity: 0.8;
        }

        /* Impact */
        .impact-section {
            padding: 8rem 5%;
            text-align: center;
            background-color: rgba(90, 55, 53, 0.05);
        }

        blockquote {
            font-family: var(--font-serif);
            font-size: 2.5rem;
            line-height: 1.3;
            max-width: 800px;
            margin: 0 auto 2rem;
            font-style: italic;
            color: var(--truffle);
        }

        cite {
            font-weight: 700;
            color: var(--spore);
            font-style: normal;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        /* Footer */
        .footer {
            background-color: var(--velvet);
            color: var(--oyster);
            padding: 4rem 5%;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 3rem;
        }

        .brand-footer {
            font-family: var(--font-serif);
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .links-col {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .links-col a {
            color: var(--oyster);
            text-decoration: none;
            opacity: 0.8;
            transition: opacity 0.2s;
        }

        .links-col a:hover {
            opacity: 1;
        }

        .contact-footer {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--truffle); /* Darker text for contrast on footer bg */
            text-decoration: none;
            margin-bottom: 1rem;
            display: inline-block;
        }

        .copy {
            opacity: 0.6;
            font-size: 0.9rem;
        }
    </style>
</BlankLayout>
