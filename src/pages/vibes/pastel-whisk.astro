---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="The Pastel Whisk">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Lora:ital,wght@0,400;0,500;0,600;1,400&family=Pinyon+Script&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="whisk-wrapper">
        <!-- Nav -->
        <nav class="nav">
            <a href="/" class="logo">The Pastel Whisk</a>
            <div class="nav-links">
                <a href="#">Shop</a>
                <a href="#">Our Story</a>
                <a href="#">Weddings</a>
                <a href="#" class="cart-link">Cart (0)</a>
            </div>
        </nav>

        <!-- Hero -->
        <header class="hero">
            <div class="hero-bg">
                <img src="/images/pastelhero.png" alt="Pastel Whisk Treats" />
                <div class="hero-overlay"></div>
            </div>

            <div class="container hero-container">
                <div class="hero-content">
                    <span class="script-tag">Handcrafted with love</span>
                    <h1 class="headline">Life is Sweet.</h1>
                    <p class="subhead">
                        Intricate macarons, wedding favours, and elegant
                        afternoon teas.
                    </p>
                </div>
            </div>
        </header>

        <div class="container">
            <div class="grid-container">
                <!-- Rose Card -->
                <div class="flavour-card card-rose">
                    <div class="card-blob"></div>
                    <img
                        src="/images/flavour1.png"
                        alt="Rose & Raspberry"
                        class="flavour-img"
                    />
                    <h4>Rose & Raspberry</h4>
                    <p>
                        Delicate rosewater buttercream with a tart raspberry jam
                        core.
                    </p>
                    <span class="price-tag">£24.00</span>
                </div>

                <!-- Pistachio Card -->
                <div class="flavour-card card-pistachio">
                    <div class="card-blob"></div>
                    <img
                        src="/images/flavour2.png"
                        alt="Sicilian Pistachio"
                        class="flavour-img"
                    />
                    <h4>Sicilian Pistachio</h4>
                    <p>Roasted pistachio ganache rolled in crushed nuts.</p>
                    <span class="price-tag">£26.00</span>
                </div>

                <!-- Earl Grey Card -->
                <div class="flavour-card card-lavender">
                    <div class="card-blob"></div>
                    <img
                        src="/images/flavour3.png"
                        alt="Earl Grey & Honey"
                        class="flavour-img"
                    />
                    <h4>Earl Grey & Honey</h4>
                    <p>
                        Infused black tea ganache with a drop of local
                        wildflower honey.
                    </p>
                    <span class="price-tag">£25.00</span>
                </div>

                <!-- Lemon Card -->
                <div class="flavour-card card-lemon">
                    <div class="card-blob"></div>
                    <img
                        src="/images/flavour4.png"
                        alt="Amalfi Lemon"
                        class="flavour-img"
                    />
                    <h4>Amalfi Lemon</h4>
                    <p>Zesty lemon curd with a white chocolate shell.</p>
                    <span class="price-tag">£24.00</span>
                </div>
            </div>
        </div>

        <!-- Weddings & Events -->
        <section class="weddings-section">
            <div class="wedding-bg">
                <img src="/images/weddingcake.png" alt="Wedding Cake" />
                <div class="wedding-overlay"></div>
            </div>
            <div class="container wedding-container">
                <div class="wedding-content">
                    <h2 class="script-heading white-script">Celebrations</h2>
                    <h3>Weddings & Events</h3>
                    <p>
                        Make your special day unforgettable with our bespoke
                        dessert tables and macaron towers.
                    </p>
                    <button class="secondary-btn">Enquire Now</button>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <div class="curved-top">
                <svg viewBox="0 0 1440 320" preserveAspectRatio="none">
                    <path
                        fill="#C59FBE"
                        fill-opacity="1"
                        d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,112C672,96,768,96,864,112C960,128,1056,160,1152,160C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"
                    ></path>
                </svg>
            </div>
            <div class="footer-content">
                <div class="insta-grid">
                    <div class="insta-item"></div>
                    <div class="insta-item"></div>
                    <div class="insta-item"></div>
                    <div class="insta-item"></div>
                </div>
                <div class="footer-info">
                    <h3>The Pastel Whisk</h3>
                    <p>12 Sweet Street, Bath, BA1 1AA</p>
                    <div class="socials">
                        <span>Instagram</span>
                        <span>Pinterest</span>
                    </div>
                </div>
            </div>
        </footer>

        <style>
            /* 
    Palette:
    Flower Box: #EDD9BE (Background)
    Soft Roses: #FAC1B5 (Highlights)
    Lavender: #C59FBE (Accents)
    Pink Tulips: #F283AE (Buttons)
    Eucalyptus: #98B8B9 (Balance)
    Tulip Stems: #C6C870 (Fresh accents)
    Text: #4A4046 (Deep Warm Charcoal)
  */

            :root {
                --bg-cream: #edd9be;
                --highlight-rose: #fac1b5;
                --accent-lavender: #c59fbe;
                --btn-pink: #f283ae;
                --balance-teal: #98b8b9;
                --accent-green: #c6c870;
                --text-charcoal: #4a4046;

                --font-script: "Pinyon Script", cursive;
                --font-heading: "Lora", serif;
                --font-body: "Lato", sans-serif;
            }

            .whisk-wrapper {
                background-color: var(--bg-cream);
                color: var(--text-charcoal);
                font-family: var(--font-body);
                min-height: 100vh;
                overflow-x: hidden;
            }

            /* Nav */
            .nav {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 2rem 3rem;
            }

            .logo {
                font-family: var(--font-script);
                font-size: 2rem;
                color: var(--btn-pink);
                font-weight: 400;
                text-decoration: none;
            }

            .nav-links {
                display: flex;
                gap: 2rem;
                align-items: center;
            }

            .nav-links a {
                text-decoration: none;
                color: var(--text-charcoal);
                font-weight: 400;
                font-size: 0.95rem;
                transition: color 0.2s;
            }

            .nav-links a:hover {
                color: var(--btn-pink);
            }

            .cart-link {
                font-weight: 700 !important;
            }

            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 0 2rem;
                width: 100%;
            }

            /* Hero */
            .hero {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                position: relative;
                min-height: 85vh;
                overflow: hidden;
                color: #fff; /* Text needs to be white on image */
            }

            .hero-bg {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 0;
            }

            .hero-bg img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .hero-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(
                    rgba(0, 0, 0, 0.2),
                    rgba(0, 0, 0, 0.4)
                );
                z-index: 1;
            }

            .hero-container {
                position: relative;
                z-index: 2;
            }

            .hero-content {
                max-width: 700px;
                margin: 0 auto;
            }

            .script-tag {
                font-family: var(--font-script);
                font-size: 2.5rem;
                color: #fff; /* White for contrast */
                display: block;
                margin-bottom: 0.5rem;
            }

            .headline {
                font-family: var(--font-heading);
                font-size: 4rem;
                margin-bottom: 1.5rem;
                line-height: 1.1;
            }

            .subhead {
                font-size: 1.2rem;
                opacity: 0.9;
            }

            /* Grid Container */
            .grid-container {
                display: grid;
                grid-template-columns: repeat(1, 1fr);
                gap: 2rem;
                padding: 4rem 0;
            }

            @media (min-width: 768px) {
                .grid-container {
                    grid-template-columns: repeat(2, 1fr);
                }
            }

            @media (min-width: 1024px) {
                .grid-container {
                    grid-template-columns: repeat(4, 1fr);
                }
            }

            .flavour-card {
                background: #fff;
                padding: 2rem;
                border-radius: 20px;
                text-align: center;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                transition: transform 0.3s;
                position: relative;
                overflow: hidden;
            }

            .flavour-card:hover {
                transform: translateY(-10px);
            }

            .card-blob {
                position: absolute;
                top: -50px;
                right: -50px;
                width: 150px;
                height: 150px;
                background: var(--bg-cream);
                border-radius: 50%;
                z-index: 0;
                opacity: 0.5;
            }

            /* ... */

            .flavour-img {
                width: 150px;
                height: 150px;
                background-color: #fff;
                border: 2px solid rgba(0, 0, 0, 0.05); /* Added border */
                border-radius: 50%;
                margin: 0 auto 2rem;
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
                object-fit: cover;
            }

            .flavour-card h4 {
                font-family: var(--font-heading);
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }

            .flavour-card p {
                font-size: 0.95rem;
                margin-bottom: 2rem;
                line-height: 1.5;
            }

            .price-tag {
                background-color: var(--accent-green);
                color: #fff;
                padding: 0.5rem 1rem;
                border-radius: 20px;
                font-weight: 700;
                font-size: 0.9rem;
            }

            /* Weddings */
            .weddings-section {
                position: relative;
                min-height: 600px;
                display: flex;
                align-items: center;
                overflow: hidden;
            }

            .wedding-bg {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 0;
            }

            .wedding-bg img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .wedding-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.4);
                z-index: 1;
            }

            .wedding-container {
                position: relative;
                z-index: 2;
                display: flex;
                justify-content: flex-end; /* Push content to right or left depending on image */
            }

            .wedding-content {
                max-width: 500px;
                color: #fff;
                background: rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
                padding: 3rem;
                border-radius: 20px;
                border: 1px solid rgba(255, 255, 255, 0.2);
            }

            /* Footer */
            .footer {
                background-color: var(--accent-lavender);
                position: relative;
                padding-bottom: 4rem;
            }

            .curved-top {
                position: absolute;
                top: -150px;
                left: 0;
                width: 100%;
                line-height: 0;
                transform: rotate(180deg);
            }

            .curved-top svg {
                display: block;
                width: 100%;
                height: 150px;
            }

            .curved-top path {
                fill: var(--accent-lavender);
            }

            .footer-content {
                max-width: 1000px;
                margin: 0 auto;
                padding: 4rem 2rem 0;
                text-align: center;
                position: relative;
                z-index: 2;
            }

            .insta-grid {
                display: grid;
                grid-template-columns: repeat(4, 1fr);
                gap: 1rem;
                margin-bottom: 4rem;
            }

            .insta-item {
                aspect-ratio: 1;
                background-color: rgba(255, 255, 255, 0.3);
                border-radius: 10px;
                transition: transform 0.2s;
            }

            .insta-item:hover {
                transform: scale(1.05);
            }

            .footer-info h3 {
                font-family: var(--font-script);
                font-size: 2.5rem;
                color: #fff;
                margin-bottom: 1rem;
            }

            .footer-info p {
                color: #fff;
                margin-bottom: 1.5rem;
            }

            .socials {
                display: flex;
                justify-content: center;
                gap: 2rem;
                color: #fff;
                font-weight: 700;
                text-transform: uppercase;
                font-size: 0.8rem;
                letter-spacing: 1px;
            }

            @media (max-width: 768px) {
                .headline {
                    font-size: 3rem;
                }
                .insta-grid {
                    grid-template-columns: repeat(2, 1fr);
                }
            }
        </style>
    </div>

    <VibeDNA
        description="Handcrafted with love. Intricate macarons, wedding favours, and elegant afternoon teas."
        fontHeader="Lora"
        fontBody="Lato"
        palette={[
            { hex: "#EDD9BE", name: "Flower Box" },
            { hex: "#F283AE", name: "Pink Tulips" },
            { hex: "#4A4046", name: "Charcoal" },
        ]}
    />
</BlankLayout>
