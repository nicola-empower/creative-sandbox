---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="Velvet Cocoa Noir">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Arimo:wght@400;500;600&family=Bodoni+Moda:ital,opsz,wght@0,6..96,400;0,6..96,600;0,6..96,800;1,6..96,400&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="velvet-wrapper" id="smooth-wrapper">
        <div id="smooth-content">
            <!-- Hero Section -->
            <header class="hero">
                <div class="video-bg">
                    <!-- Placeholder for video -->
                    <div class="video-placeholder"></div>
                </div>
                <div class="hero-content">
                    <h1 class="brand-name">VELVET COCOA NOIR</h1>
                    <p class="tagline">The Art of Indulgence.</p>
                    <button class="cta-btn">Explore Collection</button>
                </div>
                <div class="scroll-indicator">
                    <span>SCROLL</span>
                    <div class="line"></div>
                </div>
            </header>

            <!-- The Collection (Slider) -->
            <section class="collection">
                <div class="section-header">
                    <h2>The Collection</h2>
                    <p>Handcrafted truffles. Paris. London.</p>
                </div>

                <div class="slider-container">
                    <div class="slider-track">
                        <!-- Product 1 -->
                        <div class="product-card">
                            <div class="card-image"></div>
                            <h3>Dark Truffle</h3>
                            <p>85% Cocoa. Sea Salt.</p>
                            <span class="price">£50.00</span>
                        </div>
                        <!-- Product 2 -->
                        <div class="product-card">
                            <div class="card-image"></div>
                            <h3>Rose Praline</h3>
                            <p>Damask Rose. Almond.</p>
                            <span class="price">£50.00</span>
                        </div>
                        <!-- Product 3 -->
                        <div class="product-card">
                            <div class="card-image"></div>
                            <h3>Gold Leaf</h3>
                            <p>Champagne. 24k Gold.</p>
                            <span class="price">£65.00</span>
                        </div>
                        <!-- Product 4 -->
                        <div class="product-card">
                            <div class="card-image"></div>
                            <h3>Hazelnut Noir</h3>
                            <p>Roasted Hazelnut. Dark Ganache.</p>
                            <span class="price">£50.00</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- The Process -->
            <section class="process">
                <div class="process-container">
                    <div class="process-text">
                        <h2>Bean to Bar.</h2>
                        <p>
                            We source our cacao from single-estate farms in
                            Ecuador and Madagascar. Every bean is hand-selected,
                            roasted to perfection, and conched for 72 hours to
                            release the deepest, most complex flavors. This is
                            not just chocolate. It is an obsession.
                        </p>
                        <button class="secondary-btn">Our Philosophy</button>
                    </div>
                    <div class="process-visuals">
                        <div class="icon-item">
                            <div class="icon-circle"></div>
                            <span>Ethical Sourcing</span>
                        </div>
                        <div class="icon-item">
                            <div class="icon-circle"></div>
                            <span>Artisanal Craft</span>
                        </div>
                        <div class="icon-item">
                            <div class="icon-circle"></div>
                            <span>Pure Ingredients</span>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Footer -->
            <footer class="footer">
                <div class="newsletter">
                    <h3>Join the Inner Circle</h3>
                    <div class="input-group">
                        <input type="email" placeholder="Your email address" />
                        <button>Subscribe</button>
                    </div>
                </div>
                <div class="footer-links">
                    <a href="#">Instagram</a>
                    <a href="#">Facebook</a>
                    <a href="#">Contact</a>
                </div>
            </footer>

            <VibeDNA
                description="Opulent indulgence. Sensual, expensive, and rich. A taste of luxury."
                fontHeader="Bodoni Moda"
                fontBody="Arimo"
                palette={[
                    { hex: "#190608", name: "Rustic Red" },
                    { hex: "#750D1C", name: "Burgundy" },
                    { hex: "#C32349", name: "Old Rose" },
                    { hex: "#FFC7D5", name: "Pink Lace" },
                ]}
            />
        </div>
    </div>
</BlankLayout>

<script>
    import Lenis from "lenis";

    const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
    });

    // @ts-ignore
    function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
    }

    requestAnimationFrame(raf);
</script>

<style>
    /* 
    Palette:
    Rustic Red: #190608
    Burgundy: #750D1C
    Old Rose: #C32349
    Charm: #D66C83
    Pink Lace: #FFC7D5
    */

    :root {
        --bg-dark: #190608;
        --bg-secondary: #750d1c;
        --accent-primary: #c32349;
        --accent-secondary: #d66c83;
        --text-light: #ffc7d5;

        --font-heading: "Bodoni Moda", serif;
        --font-body: "Arimo", sans-serif;
    }

    .velvet-wrapper {
        background-color: var(--bg-dark);
        color: var(--text-light);
        font-family: var(--font-body);
        min-height: 100vh;
        overflow: hidden; /* For Lenis */
    }

    /* Typography */
    h1,
    h2,
    h3 {
        font-family: var(--font-heading);
        font-weight: 600;
    }

    /* Hero */
    .hero {
        height: 100vh;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        overflow: hidden;
    }

    .video-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        opacity: 0.4;
    }

    .video-placeholder {
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at center, #750d1c 0%, #190608 80%);
        /* Simulating movement */
        background-size: 200% 200%;
        animation: pulseBg 10s ease infinite;
    }

    @keyframes pulseBg {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .hero-content {
        position: relative;
        z-index: 10;
        padding: 2rem;
        animation: fadeUp 1.5s ease-out;
    }

    .brand-name {
        font-size: 5rem;
        letter-spacing: -2px;
        margin-bottom: 1rem;
        line-height: 1;
    }

    .tagline {
        font-size: 1.5rem;
        letter-spacing: 2px;
        font-weight: 300;
        margin-bottom: 3rem;
        opacity: 0.9;
    }

    .cta-btn {
        background-color: var(--accent-primary);
        color: var(--text-light);
        border: none;
        padding: 1.2rem 3rem;
        font-family: var(--font-heading);
        font-size: 1.1rem;
        font-weight: 600;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .cta-btn:hover {
        background-color: var(--accent-secondary);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(195, 35, 73, 0.3);
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        opacity: 0.7;
        font-size: 0.8rem;
        letter-spacing: 2px;
    }

    .line {
        width: 1px;
        height: 60px;
        background-color: var(--text-light);
    }

    /* Collection */
    .collection {
        padding: 8rem 0;
        background-color: var(--bg-secondary);
        overflow: hidden;
    }

    .section-header {
        text-align: center;
        margin-bottom: 4rem;
        padding: 0 2rem;
    }

    .section-header h2 {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .section-header p {
        font-size: 1.2rem;
        opacity: 0.8;
        font-style: italic;
        font-family: var(--font-heading);
    }

    .slider-container {
        padding: 0 2rem;
        overflow-x: auto;
        /* Hide scrollbar */
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .slider-container::-webkit-scrollbar {
        display: none;
    }

    .slider-track {
        display: flex;
        gap: 3rem;
        padding-bottom: 2rem;
        min-width: max-content;
    }

    .product-card {
        width: 300px;
        flex-shrink: 0;
        text-align: center;
        transition: transform 0.3s ease;
    }

    .product-card:hover {
        transform: scale(1.02);
    }

    .card-image {
        width: 100%;
        aspect-ratio: 1;
        background-color: var(--bg-dark);
        margin-bottom: 1.5rem;
        border: 1px solid rgba(255, 199, 213, 0.1);
    }

    .product-card h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .product-card p {
        font-size: 0.9rem;
        opacity: 0.7;
        margin-bottom: 1rem;
    }

    .price {
        display: block;
        font-family: var(--font-heading);
        font-size: 1.2rem;
        color: var(--accent-secondary);
    }

    /* Process */
    .process {
        padding: 8rem 2rem;
        background-color: var(--bg-dark);
    }

    .process-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 6rem;
    }

    .process-text {
        flex: 1;
    }

    .process-text h2 {
        font-size: 4rem;
        margin-bottom: 2rem;
        line-height: 1.1;
    }

    .process-text p {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 3rem;
        opacity: 0.8;
    }

    .secondary-btn {
        background: transparent;
        border: 1px solid var(--accent-secondary);
        color: var(--accent-secondary);
        padding: 1rem 2.5rem;
        font-family: var(--font-heading);
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s;
    }

    .secondary-btn:hover {
        background-color: var(--accent-secondary);
        color: var(--bg-dark);
    }

    .process-visuals {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .icon-item {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        font-family: var(--font-heading);
        font-size: 1.5rem;
        font-style: italic;
    }

    .icon-circle {
        width: 60px;
        height: 60px;
        border: 1px solid var(--accent-secondary);
        border-radius: 50%;
    }

    /* Footer */
    .footer {
        padding: 6rem 2rem;
        background-color: #120405; /* Slightly darker than bg-dark */
        text-align: center;
    }

    .newsletter {
        max-width: 500px;
        margin: 0 auto 4rem;
    }

    .newsletter h3 {
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .input-group {
        display: flex;
        border-bottom: 1px solid var(--accent-primary);
    }

    .input-group input {
        flex: 1;
        background: transparent;
        border: none;
        padding: 1rem;
        color: var(--text-light);
        font-family: var(--font-body);
        outline: none;
    }

    .input-group button {
        background: transparent;
        border: none;
        color: var(--accent-primary);
        font-family: var(--font-heading);
        font-weight: 600;
        text-transform: uppercase;
        cursor: pointer;
        padding: 0 1rem;
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 3rem;
    }

    .footer-links a {
        color: var(--text-light);
        text-decoration: none;
        font-size: 0.9rem;
        opacity: 0.6;
        transition: opacity 0.3s;
    }

    .footer-links a:hover {
        opacity: 1;
        color: var(--accent-secondary);
    }

    /* Animations */
    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 768px) {
        .brand-name {
            font-size: 3rem;
        }
        .process-container {
            flex-direction: column;
            gap: 4rem;
        }
        .section-header h2 {
            font-size: 3rem;
        }
    }
</style>
