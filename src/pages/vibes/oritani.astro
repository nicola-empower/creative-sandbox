---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="The Oritani Group">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Manrope:wght@300;400;500;600&display=swap"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/chart.js" is:inline></script>
    </Fragment>

    <div class="oritani-wrapper">
        <!-- Nav -->
        <nav class="nav">
            <div class="logo-container">
                <svg
                    class="logo-svg"
                    width="40"
                    height="40"
                    viewBox="0 0 100 100"
                >
                    <path
                        class="logo-path"
                        d="M50 10 L90 90 L10 90 Z"
                        fill="none"
                        stroke="#E3C39D"
                        stroke-width="2"></path>
                    <circle
                        class="logo-circle"
                        cx="50"
                        cy="55"
                        r="15"
                        fill="none"
                        stroke="#E3C39D"
                        stroke-width="2"></circle>
                </svg>
                <span class="logo-text">THE ORITANI GROUP</span>
            </div>
            <div class="nav-right">
                <a href="#" class="nav-link">Philosophy</a>
                <a href="#" class="nav-link">Team</a>
                <a href="#" class="nav-link">Insights</a>
                <a href="#" class="login-link">
                    <span class="lock-icon">ðŸ”’</span> CLIENT PORTAL
                </a>
            </div>
        </nav>

        <!-- Hero -->
        <header class="hero">
            <div class="hero-content">
                <div class="hero-line"></div>
                <h1 class="headline">
                    Preserving Legacy.<br />Building Futures.
                </h1>
                <p class="subhead">
                    Quiet luxury for the discerning few. Stability in a volatile
                    world.
                </p>
                <button class="cta-btn">Partner With Us</button>
            </div>

            <!-- Animated SVG Background Element -->
            <div class="hero-bg-anim">
                <svg
                    width="100%"
                    height="100%"
                    viewBox="0 0 800 600"
                    preserveAspectRatio="none"
                >
                    <path
                        class="bg-line"
                        d="M0 100 Q 400 50 800 100"
                        fill="none"
                        stroke="#4B6382"
                        stroke-width="1"
                        opacity="0.2"></path>
                    <path
                        class="bg-line delay-1"
                        d="M0 200 Q 400 150 800 200"
                        fill="none"
                        stroke="#4B6382"
                        stroke-width="1"
                        opacity="0.2"></path>
                    <path
                        class="bg-line delay-2"
                        d="M0 300 Q 400 250 800 300"
                        fill="none"
                        stroke="#4B6382"
                        stroke-width="1"
                        opacity="0.2"></path>
                </svg>
            </div>
        </header>

        <VibeDNA
            description="Preserving Legacy. Building Futures. Quiet luxury for the discerning few."
            fontHeader="Cinzel"
            fontBody="Manrope"
            palette={[
                { hex: "#071739", name: "Midnight Ink" },
                { hex: "#E3C39D", name: "Gilded Sand" },
                { hex: "#CDD5DB", name: "Paper White" },
            ]}
        />

        <!-- Philosophy -->
        <section class="philosophy">
            <div class="split-text">
                <span class="section-label">OUR PHILOSOPHY</span>
                <h2>The Architecture of Wealth</h2>
                <p>
                    We believe that true wealth is not just accumulated; it is
                    engineered. Like a cathedral built to span centuries, your
                    portfolio requires a foundation of stone and a structure of
                    steel.
                </p>
                <p>We do not chase trends. We build monuments.</p>
                <div class="signature">The Oritani Partners</div>
            </div>
            <div class="split-image">
                <div class="abstract-arch"></div>
            </div>
        </section>

        <!-- Market Performance (Chart.js) -->
        <section class="performance">
            <div class="container">
                <div class="chart-header">
                    <h3>Market Resilience</h3>
                    <p>Consistent growth through volatility.</p>
                </div>
                <div class="chart-container">
                    <canvas id="performanceChart"></canvas>
                </div>
            </div>
        </section>

        <!-- Team -->
        <section class="team">
            <div class="container">
                <div class="team-header">
                    <h3>The Stewards</h3>
                    <div class="gold-line"></div>
                </div>
                <div class="team-grid">
                    <div class="team-card">
                        <div class="headshot h1"></div>
                        <h4>Arthur Vance</h4>
                        <span class="role">Managing Partner</span>
                    </div>
                    <div class="team-card">
                        <div class="headshot h2"></div>
                        <h4>Elena Corves</h4>
                        <span class="role">Chief Investment Officer</span>
                    </div>
                    <div class="team-card">
                        <div class="headshot h3"></div>
                        <h4>Julian Thorne</h4>
                        <span class="role">Head of Advisory</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
    </div>
</BlankLayout>

<script>
    declare const Chart: any;

    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById(
            "performanceChart",
        ) as HTMLCanvasElement | null;
        if (!ctx) return;

        // Palette Colors
        const midnightInk = "#071739";
        const gildedSand = "#E3C39D";
        const steelBlue = "#4B6382";
        const paperWhite = "#CDD5DB";

        new Chart(ctx, {
            type: "line",
            data: {
                labels: [
                    "2019",
                    "2020",
                    "2021",
                    "2022",
                    "2023",
                    "2024",
                    "2025",
                ],
                datasets: [
                    {
                        label: "Oritani Composite",
                        data: [100, 112, 125, 122, 135, 148, 160],
                        borderColor: gildedSand,
                        backgroundColor: "rgba(227, 195, 157, 0.1)",
                        borderWidth: 2,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: midnightInk,
                        pointBorderColor: gildedSand,
                        pointRadius: 4,
                        pointHoverRadius: 6,
                    },
                    {
                        label: "Market Benchmark",
                        data: [100, 108, 115, 105, 118, 125, 132],
                        borderColor: steelBlue,
                        borderWidth: 1,
                        borderDash: [5, 5],
                        tension: 0.4,
                        pointRadius: 0,
                        pointHoverRadius: 0,
                    },
                ],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: midnightInk,
                            font: {
                                family: "Manrope",
                                size: 12,
                            },
                        },
                    },
                    tooltip: {
                        backgroundColor: midnightInk,
                        titleColor: gildedSand,
                        bodyColor: paperWhite,
                        borderColor: gildedSand,
                        borderWidth: 1,
                        padding: 10,
                        displayColors: false,
                    },
                },
                scales: {
                    y: {
                        grid: {
                            color: "rgba(75, 99, 130, 0.1)",
                            borderColor: "transparent",
                        },
                        ticks: {
                            color: steelBlue,
                            font: {
                                family: "Manrope",
                            },
                        },
                    },
                    x: {
                        grid: {
                            display: false,
                        },
                        ticks: {
                            color: steelBlue,
                            font: {
                                family: "Manrope",
                            },
                        },
                    },
                },
                animation: {
                    duration: 2000,
                    easing: "easeOutQuart",
                },
            },
        });
    });
</script>

<style>
    /* 
    Palette:
    Midnight Ink: #071739
    Steel Blue: #4B6382
    Winter Sky: #A4B5C4
    Paper White: #CDD5DB
    Antique Bronze: #A68868
    Gilded Sand: #E3C39D
  */

    :root {
        --bg-dark: #071739;
        --bg-light: #cdd5db;
        --accent-gold: #e3c39d;
        --accent-bronze: #a68868;
        --text-blue: #4b6382;
        --text-light: #a4b5c4;

        --font-heading: "Cinzel", serif;
        --font-body: "Manrope", sans-serif;
    }

    .oritani-wrapper {
        background-color: var(--bg-light);
        color: var(--bg-dark);
        font-family: var(--font-body);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        overflow-x: hidden;
    }

    /* Nav */
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 3rem;
        background-color: var(--bg-dark);
        color: #fff;
        border-bottom: 1px solid var(--accent-bronze);
    }

    .logo-container {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .logo-svg {
        width: 40px;
        height: 40px;
    }

    .logo-path {
        stroke-dasharray: 300;
        stroke-dashoffset: 300;
        animation: drawLine 2s ease-out forwards;
    }

    .logo-circle {
        stroke-dasharray: 100;
        stroke-dashoffset: 100;
        animation: drawLine 2s ease-out 1s forwards;
    }

    .logo-text {
        font-family: var(--font-heading);
        font-weight: 600;
        letter-spacing: 2px;
        color: var(--accent-gold);
        font-size: 1.1rem;
    }

    .nav-right {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-link {
        color: var(--text-light);
        text-decoration: none;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: color 0.3s;
    }

    .nav-link:hover {
        color: var(--accent-gold);
    }

    .login-link {
        color: var(--accent-gold);
        text-decoration: none;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 1px;
        border: 1px solid var(--accent-gold);
        padding: 0.5rem 1rem;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .login-link:hover {
        background-color: var(--accent-gold);
        color: var(--bg-dark);
    }

    /* Hero */
    .hero {
        background-color: var(--bg-dark);
        color: #fff;
        padding: 8rem 3rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
    }

    .hero-content {
        position: relative;
        z-index: 10;
        max-width: 800px;
    }

    .hero-line {
        width: 1px;
        height: 100px;
        background-color: var(--accent-bronze);
        margin: 0 auto 2rem;
    }

    .headline {
        font-family: var(--font-heading);
        font-size: 4rem;
        line-height: 1.2;
        margin-bottom: 2rem;
        color: #fff;
    }

    .subhead {
        font-size: 1.1rem;
        color: var(--text-light);
        margin-bottom: 3rem;
        letter-spacing: 1px;
        font-weight: 300;
    }

    .cta-btn {
        background: transparent;
        border: 1px solid var(--accent-gold);
        color: var(--accent-gold);
        padding: 1rem 3rem;
        font-family: var(--font-heading);
        font-size: 1rem;
        letter-spacing: 2px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s;
    }

    .cta-btn:hover {
        background-color: var(--accent-gold);
        color: var(--bg-dark);
        box-shadow: 0 0 20px rgba(227, 195, 157, 0.3);
    }

    .hero-bg-anim {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }

    .bg-line {
        stroke-dasharray: 1000;
        stroke-dashoffset: 1000;
        animation: drawBg 5s ease-in-out infinite alternate;
    }

    .delay-1 {
        animation-delay: 1s;
    }
    .delay-2 {
        animation-delay: 2s;
    }

    /* Philosophy */
    .philosophy {
        display: flex;
        flex-direction: column;
    }

    @media (min-width: 768px) {
        .philosophy {
            flex-direction: row;
            min-height: 600px;
        }
    }

    .split-text {
        flex: 1;
        padding: 6rem 4rem;
        background-color: var(--bg-light); /* Paper White */
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .section-label {
        font-size: 0.8rem;
        letter-spacing: 3px;
        color: var(--text-blue);
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .split-text h2 {
        font-family: var(--font-heading);
        font-size: 3rem;
        color: var(--bg-dark);
        margin-bottom: 2rem;
    }

    .split-text p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a5568;
        margin-bottom: 1.5rem;
        max-width: 500px;
    }

    .signature {
        font-family: "Cinzel", serif;
        font-style: italic;
        font-size: 1.2rem;
        color: var(--accent-bronze);
        margin-top: 2rem;
    }

    .split-image {
        flex: 1;
        background-color: #b0bec5;
        position: relative;
        overflow: hidden;
    }

    .abstract-arch {
        width: 100%;
        height: 100%;
        background:
            linear-gradient(
                135deg,
                rgba(7, 23, 57, 0.8),
                rgba(75, 99, 130, 0.6)
            ),
            repeating-linear-gradient(
                45deg,
                transparent,
                transparent 10px,
                rgba(255, 255, 255, 0.1) 10px,
                rgba(255, 255, 255, 0.1) 20px
            );
        background-size: cover;
    }

    /* Performance Chart */
    .performance {
        padding: 6rem 2rem;
        background-color: #fff;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .chart-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .chart-header h3 {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        color: var(--bg-dark);
        margin-bottom: 0.5rem;
    }

    .chart-header p {
        color: var(--text-blue);
        font-size: 1.1rem;
    }

    .chart-container {
        height: 400px;
        width: 100%;
        position: relative;
    }

    /* Team */
    .team {
        padding: 6rem 2rem;
        background-color: var(--bg-light);
    }

    .team-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .team-header h3 {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        color: var(--bg-dark);
        margin-bottom: 1rem;
    }

    .gold-line {
        width: 60px;
        height: 2px;
        background-color: var(--accent-gold);
        margin: 0 auto;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
    }

    .team-card {
        text-align: center;
        cursor: pointer;
    }

    .headshot {
        width: 100%;
        height: 300px;
        background-color: #ccc;
        margin-bottom: 1.5rem;
        filter: grayscale(100%);
        transition: all 0.4s ease;
        border: 1px solid transparent;
    }

    .team-card:hover .headshot {
        filter: grayscale(0%);
        border-color: var(--text-blue);
        box-shadow: 0 10px 30px rgba(7, 23, 57, 0.1);
    }

    .h1 {
        background: linear-gradient(to bottom, #ccc, #999);
    }
    .h2 {
        background: linear-gradient(to bottom, #ccc, #888);
    }
    .h3 {
        background: linear-gradient(to bottom, #ccc, #777);
    }

    .team-card h4 {
        font-family: var(--font-heading);
        font-size: 1.2rem;
        color: var(--bg-dark);
        margin-bottom: 0.5rem;
    }

    .role {
        font-size: 0.9rem;
        color: var(--text-blue);
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    /* Footer */
    .footer {
        background-color: var(--bg-dark);
        color: var(--text-light);
        padding: 4rem 2rem;
        text-align: center;
        border-top: 4px solid var(--accent-gold);
    }

    .footer-logo {
        font-family: var(--font-heading);
        font-size: 1.5rem;
        color: #fff;
        margin-bottom: 2rem;
        letter-spacing: 2px;
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 2rem;
        font-size: 0.9rem;
        color: var(--accent-gold);
    }

    .copyright {
        font-size: 0.8rem;
        opacity: 0.5;
    }

    /* Animations */
    @keyframes drawLine {
        to {
            stroke-dashoffset: 0;
        }
    }

    @keyframes drawBg {
        0% {
            stroke-dashoffset: 1000;
        }
        100% {
            stroke-dashoffset: 0;
        }
    }

    @media (max-width: 768px) {
        .headline {
            font-size: 3rem;
        }
        .nav {
            padding: 1rem;
            flex-direction: column;
            gap: 1rem;
        }
        .nav-right {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
