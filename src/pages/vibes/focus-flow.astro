                </div>

                <!-- Toggle -->
                <div class="pricing-toggle-wrapper reveal">
                    <span class="toggle-label">Monthly</span>
                    <label class="switch">
                        <input type="checkbox" id="pricing-toggle" />
                        <span class="slider round"></span>
                    </label>
                    <span class="toggle-label"
