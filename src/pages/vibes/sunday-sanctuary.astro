        </section>

        <!-- Testimonials -->
        <section class="testimonials">
            <h2 class="section-title">Stories of Calm</h2>
            <div class="testimonial-grid">
                <div class="testimonial-card">
                    <p>
                        "I've never slept better. It feels like a deep exhale
                        for my brain."
                    </p>
                    <div class="author">- Elena R.</div>
                </div>
