        <VibeDNA
            description="Soft, calming, and floaty. A deep exhale in digital form."
            fontHeader="Fraunces"
            fontBody="Quicksand"
            palette={[
                { hex: "#A37E84", name: "Mountbatten Pink" },
                { hex: "#CDADAB", name: "Silver Pink" },
                { hex: "#EBD7CE", name: "Almond" },
                { hex: "#917F88", name: "Taupe Gray" },
                { hex: "#836871", name: "Old Lavender" },
            ]}
        />
    </div>
</BlankLayout>

<style>
    :root {
        --mountbatten: #a37e84;
        --silver-pink: #cdadab;
        --almond: #ebd7ce;
        --taupe: #917f88;
        --old-lavender: #836871;

        --font-heading: "Fraunces", serif;
        --font-body: "Quicksand", sans-serif;
    }

    .sanctuary-wrapper {
        background-color: var(--almond);
        color: var(--taupe);
        font-family: var(--font-body);
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
    }

    /* Background Blobs */
    .bg-blob {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6;
        z-index: 0;
    }

    .blob-1 {
        top: -10%;
        left: -10%;
        width: 600px;
        height: 600px;
        background-color: var(--silver-pink);
        animation: float 20s infinite alternate;
    }

    .blob-2 {
        bottom: 10%;
        right: -10%;
        width: 500px;
        height: 500px;
        background-color: var(--mountbatten);
        opacity: 0.3;
        animation: float 25s infinite alternate-reverse;
    }

    @keyframes float {
        0% {
            transform: translate(0, 0);
        }
        100% {
            transform: translate(50px, 50px);
        }
    }

    /* Nav */
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 3rem;
        position: relative;
        z-index: 10;
    }

    .logo {
        font-family: var(--font-heading);
        font-weight: 600;
        font-size: 1.5rem;
        color: var(--old-lavender);
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links a {
        color: var(--taupe);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .nav-links a:hover {
        color: var(--mountbatten);
    }

    .login-btn {
        background: transparent;
        border: 2px solid var(--mountbatten);
        color: var(--mountbatten);
        padding: 0.6rem 1.5rem;
        border-radius: 50px;
        font-family: var(--font-body);
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .login-btn:hover {
        background: var(--mountbatten);
        color: #fff;
    }

    /* Hero */
    .hero {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 4rem 3rem 8rem;
        position: relative;
        z-index: 10;
        max-width: 1200px;
        margin: 0 auto;
    }

    .hero-content {
        max-width: 500px;
    }

    .headline {
        font-family: var(--font-heading);
        font-size: 4.5rem;
        line-height: 1.1;
        color: var(--old-lavender);
        margin-bottom: 1.5rem;
    }

    .subhead {
        font-size: 1.2rem;
        line-height: 1.6;
        margin-bottom: 2.5rem;
        color: var(--taupe);
    }

    .cta-btn {
        background-color: var(--mountbatten);
        color: #fff;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-family: var(--font-body);
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        box-shadow: 0 10px 20px rgba(163, 126, 132, 0.3);
    }

    .cta-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(163, 126, 132, 0.4);
    }

    .hero-visual {
        position: relative;
        width: 500px;
        height: 500px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .breathing-circle-container {
        position: relative;
        width: 300px;
        height: 300px;
    }

    .breathing-circle {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 50%;
        background-color: var(--silver-pink);
        opacity: 0.3;
    }

    .layer-1 {
        width: 100%;
        height: 100%;
        animation: breathe 6s ease-in-out infinite;
    }

    .layer-2 {
        width: 80%;
        height: 80%;
        animation: breathe 6s ease-in-out infinite 1s;
    }

    .layer-3 {
        width: 60%;
        height: 60%;
        animation: breathe 6s ease-in-out infinite 2s;
    }

    .meditator-illustration {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100px;
        z-index: 5;
    }

    @keyframes breathe {
        0%,
        100% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.3;
        }
        50% {
            transform: translate(-50%, -50%) scale(1.5);
            opacity: 0.1;
        }
    }

    /* Features */
    .features {
        display: flex;
        justify-content: center;
        gap: 3rem;
        padding: 4rem 3rem;
        position: relative;
        z-index: 10;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);
        padding: 2.5rem;
        border-radius: 30px;
        text-align: center;
        flex: 1;
        transition: transform 0.3s;
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .feature-card:hover {
        transform: translateY(-10px);
    }

    .icon-blob {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        background: var(--almond);
        width: 80px;
        height: 80px;
        line-height: 80px;
        border-radius: 50%;
        margin-left: auto;
        margin-right: auto;
    }

    .feature-card h3 {
        font-family: var(--font-heading);
        color: var(--old-lavender);
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    /* Meditation Player */
    .meditation-section {
        padding: 6rem 3rem;
        display: flex;
        justify-content: center;
        position: relative;
        z-index: 10;
    }

    .player-card {
        background: #fff;
        padding: 2rem 3rem;
        border-radius: 50px;
        display: flex;
        align-items: center;
        gap: 3rem;
        box-shadow: 0 20px 40px rgba(145, 127, 136, 0.1);
        width: 100%;
        max-width: 800px;
    }

    .player-info {
        flex: 1;
    }

    .label {
        font-size: 0.8rem;
        letter-spacing: 1px;
        color: var(--mountbatten);
        font-weight: 600;
        display: block;
        margin-bottom: 0.5rem;
    }

    .player-info h3 {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        color: var(--old-lavender);
        margin-bottom: 0.5rem;
    }

    .player-controls {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex: 1.5;
    }

    .play-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--mountbatten);
        color: #fff;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-left: 4px; /* Optical center */
        transition: transform 0.2s;
    }

    .play-btn:hover {
        transform: scale(1.1);
    }

    .progress-bar {
        flex: 1;
        height: 6px;
        background: var(--almond);
        border-radius: 10px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill {
        width: 40%;
        height: 100%;
        background: var(--old-lavender);
        border-radius: 10px;
    }

    .time {
        font-weight: 600;
        color: var(--taupe);
        font-size: 0.9rem;
    }

    /* Testimonials */
    .testimonials {
        padding: 6rem 3rem;
        text-align: center;
        position: relative;
        z-index: 10;
    }

    .section-title {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        color: var(--old-lavender);
        margin-bottom: 4rem;
    }

    .testimonial-grid {
        display: flex;
        justify-content: center;
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    .testimonial-card {
        background: var(--silver-pink);
        padding: 3rem;
        border-radius: 30px 30px 30px 0;
        flex: 1;
        text-align: left;
        color: #fff;
    }

    .testimonial-card p {
        font-size: 1.2rem;
        font-family: var(--font-heading);
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }

    .author {
        font-weight: 600;
        opacity: 0.9;
    }

    /* Footer */
    .footer {
        position: relative;
        background-color: var(--old-lavender);
        color: var(--almond);
        margin-top: 4rem;
    }

    .footer-wave {
        display: block;
        width: 100%;
        height: auto;
        margin-top: -150px;
        pointer-events: none;
    }

    .footer-content {
        padding: 0 3rem 4rem;
        text-align: center;
        margin-top: -2rem;
    }

    .footer-logo {
        font-family: var(--font-heading);
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-links a {
        color: var(--almond);
        text-decoration: none;
        opacity: 0.8;
        transition: opacity 0.3s;
    }

    .footer-links a:hover {
        opacity: 1;
    }

    .copyright {
        font-size: 0.9rem;
        opacity: 0.6;
    }

    @media (max-width: 768px) {
        .hero {
            flex-direction: column;
            text-align: center;
            padding-top: 2rem;
        }

        .headline {
            font-size: 3rem;
        }

        .hero-visual {
            width: 100%;
            height: 300px;
            margin-top: 2rem;
        }

        .features {
            flex-direction: column;
        }

        .player-card {
            flex-direction: column;
            text-align: center;
            padding: 2rem;
            gap: 1.5rem;
        }

        .player-controls {
            width: 100%;
        }

        .testimonial-grid {
            flex-direction: column;
        }
    }
</style>
