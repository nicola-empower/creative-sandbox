---
import BlankLayout from "../../layouts/BlankLayout.astro";
import { ViewTransitions } from "astro:transitions";
import VibeDNA from "../../components/VibeDNA.astro";
---

<BlankLayout title="Silversound Audio">
    <Fragment slot="head">
        <ViewTransitions />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;400&family=Share+Tech+Mono&display=swap"
            rel="stylesheet"
        />
    </Fragment>

    <div class="silversound-wrapper">
        <!-- Hero -->
        <header class="hero">
            <div class="hero-content">
                <h1 class="fade-in">SILVERSOUND</h1>
                <p class="tagline fade-in-delay">
                    SILENCE IS GOLDEN. SILVER IS BETTER.
                </p>
                <div class="hero-product">
                    <!-- CSS Placeholder for Headphones -->
                    <div class="headphone-band"></div>
                    <div class="headphone-cup left"></div>
                    <div class="headphone-cup right"></div>
                </div>
            </div>
            <div class="scroll-indicator">
                <span>SCROLL FOR SPECS</span>
                <div class="line"></div>
            </div>
        </header>

        <!-- Specs -->
        <section class="specs">
            <div class="specs-grid">
                <div class="spec-item">
                    <span class="label">FREQ_RESP</span>
                    <span class="value">20Hz - 40kHz</span>
                </div>
                <div class="spec-item">
                    <span class="label">IMPEDANCE</span>
                    <span class="value">32 OHMS</span>
                </div>
                <div class="spec-item">
                    <span class="label">DRIVER</span>
                    <span class="value">50MM BERYLLIUM</span>
                </div>
                <div class="spec-item">
                    <span class="label">CONNECTIVITY</span>
                    <span class="value">BT 5.3 / APTX</span>
                </div>
            </div>
        </section>

        <!-- Features with Hotspots -->
        <section class="features">
            <div class="feature-container">
                <div class="schematic-lines">
                    <svg
                        width="100%"
                        height="100%"
                        viewBox="0 0 800 600"
                        preserveAspectRatio="none"
                    >
                        <!-- Glowing Lines -->
                        <path
                            d="M 400 100 L 400 300 L 200 300"
                            class="glow-line"></path>
                        <path
                            d="M 400 100 L 400 300 L 600 300"
                            class="glow-line"></path>
                        <path d="M 200 300 L 200 450" class="glow-line"></path>
                        <path d="M 600 300 L 600 450" class="glow-line"></path>

                        <!-- Circles at endpoints -->
                        <circle cx="200" cy="450" r="5" class="glow-dot"
                        ></circle>
                        <circle cx="600" cy="450" r="5" class="glow-dot"
                        ></circle>
                    </svg>
                </div>

                <div class="hotspot h1" data-feature="anc">
                    <div class="dot"></div>
                    <div class="pulse"></div>
                    <div class="info-panel">
                        <h3>ACTIVE NOISE CANCELLATION</h3>
                        <p>-45dB HYBRID ANC ARRAY</p>
                    </div>
                </div>

                <div class="hotspot h2" data-feature="battery">
                    <div class="dot"></div>
                    <div class="pulse"></div>
                    <div class="info-panel right">
                        <h3>40HR BATTERY LIFE</h3>
                        <p>QUICK CHARGE: 5MIN = 2HRS</p>
                    </div>
                </div>

                <!-- Central Product Placeholder for Context -->
                <div class="schematic-product">
                    <div class="s-band"></div>
                    <div class="s-cup left"></div>
                    <div class="s-cup right"></div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <div class="footer-grid">
                <div class="col">
                    <h4>ENGINEERED IN GLASGOW</h4>
                    <p>EST. 2025</p>
                </div>
                <div class="col right">
                    <a href="#">MANUAL</a>
                    <a href="#">SUPPORT</a>
                    <a href="#">WARRANTY</a>
                </div>
            </div>
        </footer>

        <VibeDNA
            description="Precision engineered. Aerodynamic typography. Silence is golden, silver is better."
            fontHeader="Montserrat"
            fontBody="Share Tech Mono"
            palette={[
                { hex: "#121524", name: "Black Russian" },
                { hex: "#384C65", name: "Cello" },
                { hex: "#485F88", name: "Wedgewood" },
                { hex: "#9DACCC", name: "Echo Blue" },
                { hex: "#C0C9DB", name: "Link Water" },
            ]}
        />
    </div>
</BlankLayout>

<style>
    /* 
    Palette:
    Black Russian: #121524
    Cello: #384C65
    Wedgewood: #485F88
    Echo Blue: #9DACCC
    Link Water: #C0C9DB
    */

    :root {
        --bg-main: #121524;
        --bg-panel: #384c65;
        --text-muted: #485f88;
        --accent-glow: #9daccc;
        --text-main: #c0c9db;

        --font-display: "Montserrat", sans-serif;
        --font-tech: "Share Tech Mono", monospace;
    }

    .silversound-wrapper {
        background-color: var(--bg-main);
        color: var(--text-main);
        font-family: var(--font-display);
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Typography */
    h1 {
        font-weight: 200;
        letter-spacing: 10px;
        font-size: 4rem;
        margin: 0;
    }

    h3 {
        font-weight: 300;
        letter-spacing: 2px;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    p {
        font-family: var(--font-tech);
        color: var(--text-muted);
    }

    /* Hero */
    .hero {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        background: radial-gradient(
            circle at 50% 50%,
            #1a1e33 0%,
            var(--bg-main) 70%
        );
    }

    .tagline {
        font-size: 1rem;
        letter-spacing: 5px;
        margin-top: 1rem;
        color: var(--accent-glow);
    }

    .hero-product {
        margin-top: 4rem;
        position: relative;
        width: 300px;
        height: 300px;
        animation: float 6s ease-in-out infinite;
    }

    /* CSS Headphones */
    .headphone-band {
        width: 300px;
        height: 300px;
        border: 20px solid #2a2e45;
        border-radius: 50%;
        border-bottom-color: transparent;
        position: absolute;
        top: 0;
        left: 0;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
    }

    .headphone-cup {
        width: 80px;
        height: 120px;
        background: linear-gradient(135deg, #384c65, #121524);
        border-radius: 40px;
        position: absolute;
        top: 180px;
        border: 1px solid var(--text-muted);
    }

    .headphone-cup.left {
        left: -10px;
    }
    .headphone-cup.right {
        right: -10px;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .fade-in {
        opacity: 0;
        animation: fadeIn 1.5s ease-out forwards;
    }

    .fade-in-delay {
        opacity: 0;
        animation: fadeIn 1.5s ease-out forwards;
        animation-delay: 0.5s;
    }

    @keyframes fadeIn {
        to {
            opacity: 1;
        }
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        font-family: var(--font-tech);
        font-size: 0.8rem;
        opacity: 0.5;
    }

    .line {
        width: 1px;
        height: 50px;
        background-color: var(--text-main);
    }

    /* Specs */
    .specs {
        padding: 6rem 2rem;
        background-color: #0e101b;
        border-top: 1px solid rgba(72, 95, 136, 0.2);
        border-bottom: 1px solid rgba(72, 95, 136, 0.2);
    }

    .specs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .spec-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        border-left: 2px solid var(--accent-glow);
        padding-left: 1rem;
    }

    .label {
        font-family: var(--font-tech);
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .value {
        font-family: var(--font-display);
        font-size: 1.5rem;
        color: var(--text-main);
    }

    /* Features */
    .features {
        padding: 8rem 2rem;
        position: relative;
        min-height: 800px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .feature-container {
        position: relative;
        width: 800px;
        height: 600px;
    }

    .schematic-lines {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        pointer-events: none;
    }

    .glow-line {
        fill: none;
        stroke: var(--accent-glow);
        stroke-width: 1;
        opacity: 0.5;
        filter: drop-shadow(0 0 5px var(--accent-glow));
    }

    .glow-dot {
        fill: var(--accent-glow);
        filter: drop-shadow(0 0 8px var(--accent-glow));
    }

    .hotspot {
        position: absolute;
        z-index: 10;
        cursor: pointer;
    }

    .h1 {
        bottom: 150px;
        left: 200px;
    }
    .h2 {
        bottom: 150px;
        right: 200px;
    }

    .dot {
        width: 12px;
        height: 12px;
        background-color: var(--text-main);
        border-radius: 50%;
        position: relative;
        z-index: 2;
    }

    .pulse {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 30px;
        height: 30px;
        border: 1px solid var(--accent-glow);
        border-radius: 50%;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% {
            transform: translate(-50%, -50%) scale(0.5);
            opacity: 1;
        }
        100% {
            transform: translate(-50%, -50%) scale(2);
            opacity: 0;
        }
    }

    .info-panel {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        width: 250px;
        background-color: rgba(18, 21, 36, 0.9);
        border: 1px solid var(--accent-glow);
        padding: 1rem;
        text-align: center;
        opacity: 0;
        transition:
            opacity 0.3s,
            transform 0.3s;
        pointer-events: none;
    }

    .hotspot:hover .info-panel {
        opacity: 1;
        transform: translateX(-50%) translateY(-10px);
    }

    .schematic-product {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 200px;
        height: 200px;
        opacity: 0.2;
    }

    .s-band {
        width: 200px;
        height: 200px;
        border: 10px solid #fff;
        border-radius: 50%;
        border-bottom-color: transparent;
        position: absolute;
    }

    .s-cup {
        width: 50px;
        height: 80px;
        border: 2px solid #fff;
        border-radius: 20px;
        position: absolute;
        top: 120px;
    }

    .s-cup.left {
        left: -20px;
    }
    .s-cup.right {
        right: -20px;
    }

    /* Footer */
    .footer {
        padding: 4rem 2rem;
        border-top: 1px solid rgba(72, 95, 136, 0.2);
    }

    .footer-grid {
        display: flex;
        justify-content: space-between;
        max-width: 1200px;
        margin: 0 auto;
    }

    .col h4 {
        font-weight: 400;
        letter-spacing: 3px;
        color: var(--text-main);
    }

    .col p {
        font-size: 0.8rem;
    }

    .col.right {
        display: flex;
        gap: 2rem;
    }

    .col.right a {
        color: var(--text-muted);
        text-decoration: none;
        font-family: var(--font-tech);
        font-size: 0.9rem;
        transition: color 0.3s;
    }

    .col.right a:hover {
        color: var(--accent-glow);
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .feature-container {
            transform: scale(0.5);
        }
        .specs-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
