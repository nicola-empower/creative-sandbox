<style>
    :root {
        --pink-mist: #f7dae7;
        --bubblegum: #e2b4c1;
        --cherry-soda: #d38c9d;
        --ruby-petals: #a55166;

        --font-heading: "Chicle", cursive;
        --font-body: "Courier Prime", monospace;
    }

    .galentine-wrapper {
        background-color: var(--pink-mist);
        color: var(--ruby-petals);
        font-family: var(--font-body);
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* Nav */
    .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem 3rem;
        position: relative;
        z-index: 10;
    }

    .logo {
        font-family: var(--font-heading);
        font-size: 2rem;
        transform: rotate(-2deg);
        text-shadow: 2px 2px 0 #fff;
    }

    .shop-btn {
        background: var(--ruby-petals);
        color: var(--pink-mist);
        border: 2px solid #fff;
        padding: 0.5rem 1.5rem;
        font-family: var(--font-heading);
        font-size: 1.2rem;
        border-radius: 50px;
        cursor: pointer;
        transition: transform 0.2s;
        box-shadow: 4px 4px 0 rgba(165, 81, 102, 0.2);
    }

    .shop-btn:hover {
        transform: scale(1.05) rotate(2deg);
    }

    /* Hero */
    .hero {
        text-align: center;
        padding: 6rem 2rem;
        position: relative;
        min-height: 70vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .hero-content {
        position: relative;
        z-index: 5;
    }

    .headline {
        font-family: var(--font-heading);
        font-size: 6rem;
        line-height: 0.9;
        margin-bottom: 1.5rem;
        text-shadow:
            4px 4px 0 #fff,
            8px 8px 0 var(--bubblegum);
        transform: rotate(-3deg);
    }

    .subhead {
        font-size: 1.2rem;
        max-width: 500px;
        margin: 0 auto 3rem;
        font-weight: 700;
        background: #fff;
        display: inline-block;
        padding: 0.5rem 1rem;
        transform: rotate(1deg);
        box-shadow: 4px 4px 0 var(--cherry-soda);
    }

    .cta-btn {
        background-color: var(--cherry-soda);
        color: #fff;
        border: 4px solid #fff;
        padding: 1rem 3rem;
        font-family: var(--font-heading);
        font-size: 2rem;
        border-radius: 10px;
        cursor: pointer;
        transition: transform 0.2s;
        box-shadow: 6px 6px 0 var(--ruby-petals);
    }

    .cta-btn:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 8px 10px 0 var(--ruby-petals);
    }

    /* Stickers */
    .sticker {
        position: absolute;
        font-size: 4rem;
        background: #fff;
        padding: 1rem;
        border-radius: 50%;
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.1);
        border: 4px solid #fff;
        z-index: 1;
        animation: float 6s ease-in-out infinite;
    }

    .sticker-1 {
        top: 10%;
        left: 10%;
        transform: rotate(-15deg);
        animation-delay: 0s;
    }
    .sticker-2 {
        top: 20%;
        right: 15%;
        transform: rotate(10deg);
        animation-delay: 1s;
    }
    .sticker-3 {
        bottom: 15%;
        left: 15%;
        transform: rotate(5deg);
        animation-delay: 2s;
    }
    .sticker-4 {
        bottom: 25%;
        right: 10%;
        transform: rotate(-10deg);
        animation-delay: 3s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(var(--r, 0deg));
        }
        50% {
            transform: translateY(-20px) rotate(var(--r, 0deg));
        }
    }

    /* Marquee */
    .marquee-container {
        background: var(--ruby-petals);
        color: var(--pink-mist);
        padding: 1rem 0;
        overflow: hidden;
        transform: rotate(-2deg) scale(1.05);
        border-top: 4px solid #fff;
        border-bottom: 4px solid #fff;
        margin: 4rem 0;
    }

    .marquee-content {
        display: flex;
        white-space: nowrap;
        animation: scroll 20s linear infinite;
    }

    .marquee-content span {
        font-family: var(--font-heading);
        font-size: 2rem;
        padding-right: 2rem;
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    /* Inside Section */
    .inside-section {
        padding: 6rem 3rem;
        text-align: center;
    }

    .section-title {
        font-family: var(--font-heading);
        font-size: 4rem;
        margin-bottom: 4rem;
        color: var(--ruby-petals);
        text-shadow: 3px 3px 0 #fff;
    }

    .card-grid {
        display: flex;
        justify-content: center;
        gap: 3rem;
        flex-wrap: wrap;
    }

    .product-card {
        background: #fff;
        padding: 2rem;
        border-radius: 20px;
        width: 300px;
        border: 4px solid var(--bubblegum);
        box-shadow: 10px 10px 0 var(--cherry-soda);
        transition: transform 0.3s;
    }

    .product-card:hover {
        transform: translateY(-10px) rotate(1deg);
    }

    .card-visual {
        font-size: 4rem;
        margin-bottom: 1rem;
        background: var(--pink-mist);
        width: 100px;
        height: 100px;
        line-height: 100px;
        border-radius: 50%;
        margin-left: auto;
        margin-right: auto;
    }

    .product-card h3 {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
        color: var(--ruby-petals);
    }

    /* Footer */
    .footer {
        text-align: center;
        padding: 4rem;
        background: var(--bubblegum);
        color: var(--ruby-petals);
        border-top: 4px solid #fff;
    }

    .footer-logo {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .socials {
        margin-top: 2rem;
        font-weight: 700;
    }

    .socials a {
        color: var(--ruby-petals);
        text-decoration: none;
        border-bottom: 2px solid var(--ruby-petals);
    }

    @media (max-width: 768px) {
        .headline {
            font-size: 3.5rem;
        }

        .sticker {
            font-size: 2.5rem;
        }

        .card-grid {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<script>
    // Confetti Logic
    const btn = document.getElementById("confettiBtn");

    if (btn) {
        btn.addEventListener("click", () => {
            // @ts-ignore
            if (typeof confetti !== "undefined") {
                // @ts-ignore
                confetti({
                    particleCount: 150,
                    spread: 70,
                    origin: { y: 0.6 },
                    colors: ["#D38C9D", "#E2B4C1", "#A55166", "#F7DAE7"],
                });
            }
        });
    }
</script>
