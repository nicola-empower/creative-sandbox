<style>
    .sandbox-container {
        background-color: #000;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Courier New", Courier, monospace;
        color: #fff;
        padding: 2rem;
    }

    .content {
        text-align: center;
        max-width: 1200px;
        width: 100%;
    }

    h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        letter-spacing: -2px;
    }

    p {
        margin-bottom: 4rem;
        opacity: 0.7;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .card {
        display: block;
        padding: 3rem 2rem;
        border: 1px solid #333;
        text-decoration: none;
        color: #fff;
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .card p {
        font-size: 0.9rem;
        margin-bottom: 0;
        opacity: 0.5;
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
        .sandbox-container {
            padding: 1rem;
            align-items: flex-start; /* Allow scrolling from top */
            padding-top: 4rem;
        }

        h1 {
            font-size: 2.5rem;
        }

        p {
            margin-bottom: 2rem;
        }

        .grid {
            grid-template-columns: 1fr; /* Stack cards on mobile */
            gap: 1rem;
        }

        .card {
            padding: 2rem 1.5rem;
        }
    }

