<style>
    .sandbox-container {
        background-color: #000;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Courier New", Courier, monospace;
        color: #fff;
        padding: 2rem;
    }

    .content {
        text-align: center;
        max-width: 1200px;
        width: 100%;
    }

    h1 {
        font-size: 4rem;
        margin-bottom: 1rem;
        letter-spacing: -2px;
    }

    p {
        margin-bottom: 4rem;
        opacity: 0.7;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .card {
        display: block;
        padding: 3rem 2rem;
        border: 1px solid #333;
        text-decoration: none;
        color: #fff;
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .card p {
        font-size: 0.9rem;
        margin-bottom: 0;
        opacity: 0.5;
    }

    /* Specific Card Styles */
    .disruptor:hover {
        background-color: #391b49;
        border-color: #c29ce4;
    }

    .cloud-nine:hover {
        background-color: #bed1e3;
        color: #364156;
        border-color: #f3a0ad;
    }

    .violet-hour:hover {
        background-color: #461d3a;
        color: #ecd0ec;
        border-color: #ba71a2;
        box-shadow: 0 0 20px rgba(186, 113, 162, 0.2);
    }

    .mint-condition:hover {
        background-color: #f0f9f8;
        color: #2c5e58;
        border-color: #81bfb7;
        box-shadow: 5px 5px 0px #f3a2be;
    }

    .silversound:hover {
        background-color: #121524;
        color: #c0c9db;
        border-color: #9daccc;
        box-shadow: 0 0 15px rgba(157, 172, 204, 0.3);
    }

    .nexus:hover {
        background-color: #050505;
        border-color: #bf00ff;
        box-shadow: 0 0 20px rgba(191, 0, 255, 0.3);
    }

    .havnn:hover {
